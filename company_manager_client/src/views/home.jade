.inner.statistics_page
  .home_table
    .home_box.home_box_1
      .row
        span 活动情况
      .row
        a.btn.btn-sm.btn-primary(ui-sref="campaigns") 发活动
        a.btn.btn-sm.btn-primary(ui-sref="campaigns") 管理活动
    .home_box.home_box_2(ng-if="noLeaderTeams")
      .row
        span 您还有{{noLeaderTeams}}个小队未任命队长
      .row
        a.btn.btn-sm.btn-warning(ui-sref="teamList") 任命队长
    .home_box.home_box_3
      .row
        span 您还有{{unActivatedUsers}}名员工等待
      .row
        a.btn.btn-sm.btn-info(ui-sref="activeMembers") 审核
        a.btn.btn-sm.btn-success(ui-sref="inviteMembers") 邀请
  campaign-st-bar(data="barData")
  campaign-st-pie(data="pieData")