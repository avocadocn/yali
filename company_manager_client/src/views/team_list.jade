.team_list_page
  section.content-header
    h1
      | 小队管理
      small(ng-bind-template="{{teams.length}}个小队")
  section.content
    .row
      .col-md-2.col-sm-4.col-xs-12.text-center
        a.btn.btn-primary(ui-sref="manager.createTeam") 新建小队
      .col-md-10.col-sm-8.col-xs-12(ng-if="noLeaderTeams.length>0")
        .row
          .col-md-3.col-sm-6.col-xs-12.team(ng-repeat="team in noLeaderTeams")
            p {{team.name}},还没有队长
            a.btn.btn-primary(ui-sref="manager.pointTeamLeader({teamId:team._id})") 任命队长
    .row
      .col-xs-12
        .box.box-primary(ng-show="leaderTeams.length")
          .box-header
            h3.box-title 有队长的小队
          .box-body.no-padding
            table(datatable="ng" dt-options="dtOptions" dt-column-defs="dtColumnDefs").table.table-striped
              thead
                tr
                  th 名称
                  th 队长
                  th 人数
                  th 上月活动数
                  th 总活动数
                  th 积分
                  th 活跃度
                  th 详情
                  th 编辑
                  th 任命
              tbody
                tr(ng-repeat="team in leaderTeams")
                  td {{team.name}}
                  td {{team.leaders[0].nickname}}
                  td {{team.memberCount}}
                  td {{team.count.last_month_campaign}}
                  td {{team.count.total_campaign}}
                  td {{team.score_rank.score}}
                  td {{team.score.total}}
                  td
                    button.btn.btn-xs.btn-link(ng-click="detail('leaderTeams', $index)") 详情
                  td
                    a(ui-sref="manager.editTeam({teamId:team._id})") 编辑
                  td
                    a(ui-sref="manager.pointTeamLeader({teamId:team._id})") 任命队长
    .row
      .col-xs-12
        .box.box-primary(ng-show="closedTeams.length")
          .box-header
            h3.box-title 被关闭的小队
          .box-body.no-padding
            table(datatable="ng" dt-options="Options" dt-column-defs="ColumnDefs").table.table-striped
              thead
                tr
                  th 名称
                  th 队长
                  th 人数
                  th 上月活动数
                  th 总活动数
                  th 积分
                  th 活跃度
                  th 详情
                  th 编辑
                  //- th.center 任命
              tbody
                tr(ng-repeat="team in closedTeams")
                  td {{team.name}}
                  td {{team.leaders[0].nickname}}
                  td {{team.memberCount}}
                  td {{team.count.last_month_campaign}}
                  td {{team.count.total_campaign}}
                  td {{team.score_rank.score}}
                  td {{team.score.total}}
                  td
                    button.btn.btn-xs.btn-link(ng-click="detail('leaderTeams', $index)") 详情
                  td
                    a(ui-sref="manager.editTeam({teamId:team._id})") 编辑
                  //- td.center
                  //-   a(ui-sref="manager.pointTeamLeader({teamId:team._id})") 任命队长
script(type="text/ng-template" id="teamDetailModal.html")
  .modal-header
    button.close(type="button" data-dismiss="modal" aria-label="Close" ng-click="cancel()")
      span(aria-hidden="true") &times;
    h4.modal-title 小队详情
  .modal-body
    .team_detail_modal(ng-cloak)
      .row
        .col-md-2 队名
        .col-md-10 {{team.name}}
      .row
        .col-md-2 公司名
        .col-md-10 {{team.cname}}
      .row
        .col-md-2 类型
        .col-md-10 {{team.groupType}}
      .row
        .col-md-2 主场一
        .col-md-10 {{team.homeCourts.length>0?team.homeCourts[0].name :'暂无'}}
      .row
        .col-md-2 主场二
        .col-md-10 {{team.homeCourts.length>1?team.homeCourts[1].name :'暂无'}}
      .row
        .col-md-2 活跃度
        .col-md-10 {{team.score.total}}
      .row
        .col-md-2 积分
        .col-md-10 {{team.score_rank.score}}
      .row
        .col-md-2 队长
        .col-md-2.user(ng-repeat="leader in team.leaders")
          img.user_logo(ng-src="{{leader.photo}}/40/40")
          .user_name {{leader.nickname}}
      .row
        .col-md-2 成员
        .col-md-2.user(ng-repeat="member in team.members")
          img.user_logo(ng-src="{{member.photo}}/40/40")
          .user_name {{member.nickname}}
      .row
        .col-md-2 近期活动
        .col-md-10 {{team.lastCampaign?team.lastCampaign.theme :'无'}}
  .modal-footer
    button.btn.btn-primary(ng-click="cancel()") 确定










