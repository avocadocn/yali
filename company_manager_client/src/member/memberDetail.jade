.box.box-warning(bindonce="nowUser")
  .box-header.with-border.user_detail(ng-style="{'background-image': 'url(' + nowUser.photo + '/256/256)'}")
    h2.box-title 用户详情
    .box-tools.pull-right
      .btn.btn-box-tool(ng-click="close()")
        i.fa.fa-times
    .row
      .info_user
        img.user_logo.img-circle(ng-src="{{nowUser.photo}}/80/80")
      .user_name(bo-bind="nowUser.nickname")
  .box-body.clearfix
    .info.form-horizontal
      .info_header 基本信息
      .info-border
      .info_container
        .info_label 昵称
        .info_content(bo-bind="nowUser.nickname")
      .info_container
        .info_label 真实姓名
        .info_content(bo-bind="nowUser.realname || '-'")
      .info_container
        .info_label 手机号
        .info_content(bo-bind="nowUser.phone || '-'")
      .info_container
        .info_label 邮箱
        .info_content(bo-bind="nowUser.email || '-'")
      .info_container
        .info_label QQ
        .info_content(bo-bind="nowUser.qq || '-'")
      .info_container
        .info_label 部门
        .info_content(bo-bind="nowUser.department.name || '-'")
      .info_container
        .info_label 性别
        .info_content(bo-bind="nowUser.sex")
      .info_container.info_inroduce
        .info_label 简介
        p.info_intro_content(bo-bind="nowUser.introduce || '-'")
      .info_container
        .info_label 参加活动
        .info_content(bo-bind="nowUser.campaignCount")
      .info_container
        .info_label 活跃度
        .info_content(bo-bind="nowUser.score")
      .info_container
        .info_label 状态
        .info_content(bo-bind="nowUser.active? '正常' : nowUser.mail_active ? '屏蔽中' : '未激活'")
      .info_container
        .info_label.non_float 参加小队
        .team(ng-repeat="team in nowUser.team" ng-if="team.gid!='0' && ($index<6 || showAll)")
          img.team_logo(bo-src="team.logo + '/40/40'" bo-title="team.name")
          .team_name(bo-bind="team.name")
        .team_more(ng-if="nowUser.team.length > 6 && !showAll" ng-click="showAllMember()") 查看更多成员
        .no_team(bo-if="!nowUser.team.length") 无小队加入