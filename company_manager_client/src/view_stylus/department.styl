.department_page
  &.inner
    padding 15px

  // department tree style
  .tree
    min-height 20px
    padding 19px
    margin-bottom 20px

  .tree li
    list-style-type none
    margin 0
    padding 10px 5px 0 5px
    position relative

  .tree li::before, .tree li::after
    content ''
    left -20px
    position absolute
    right auto

  .tree li::before
    border-left 1px solid #999
    bottom 50px
    height 100%
    top 0
    width 1px

  .tree li::after
    border-top 1px solid #999
    height 20px
    top 30px
    width 25px

  .tree
    .dropdown-menu
      border-radius 0
      min-width inherit
      li
        padding 0
        &::before, &::after
          border none

        a
          padding 0 14px

  .tree li>.self>span
    border 1px solid #999
    border-radius 0
    display inline-block
    padding 5px 8px
    text-decoration none

  .tree li.parent_li>.self>span
    cursor pointer

  .tree>ul>li::before, .tree>ul>li::after
    border 0

  .tree li:last-child::before
    height 30px

  .tree li.parent_li>.self>span:hover, .tree li.parent_li>.self>span:hover+ul li>.self>span
    background #eee
    border 1px solid #94a0b4
    color #000

  .tree
    .dl_btn_small
      padding-top 6px
      padding-bottom 6px

    .inline
      display inline

    .manager_list
      float right

    .operator
      .operator_button
        border-radius 20px
        border none
        background transparent
        outline none

    .manager
      margin-left 10px
      .manager_photo
        width 48px
        height 48px
        border-radius 100%

  // modal style
  .appoint_modal
    .search_form
      border 1px solid #ddd
      height 20px
      margin-right 19px
    .search_input
      float left
      height 18px
      line-height 18px
      font-size 14px
      width 100px
      border 0
      padding 0 1px
      color #999999
    .search_icon
      cursor pointer
      float right
      background-image url('/img/icons/search_g.png')
      background-repeat no-repeat
      background-size 15px 15px
      background-position 0px 2px
      height 18px
      width 18px
    .show_member_link
      margin-left 10px
      cursor pointer
    .member_box
      float left
      width 60px
      margin 5px
    .photo
      width 48px
      height 48px
      border-radius 100%
    .leader
      border 2px solid #ff2222
    .name
      overflow hidden
      text-overflow ellipsis
      white-space nowrap
      text-align center
