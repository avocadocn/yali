      text-align left
      margin-top 20px

  .search_form
    border 1px solid #ddd
    height 20px
    margin-right 19px
    .search_input
      float left
      height 18px
      input
        line-height 18px
        width 100px
        border 0
        padding 0 1px
        color #999999
        float left
    .search_icon
      cursor pointer
      float right
      background-image url('/img/icons/search_g.png')
      background-repeat no-repeat
      background-size 15px 15px
      background-position 0px 2px
      height 18px
      width 18px

  .img_user
    border-radius 100%

  .dl_row
    min-height 34px
    padding 2px 0
    margin-left 0
    margin-right 0

  .dl_cover
    border-style solid
    border-color #ff2222
    border-width 2px
    border-radius 100%
    width 48px
    height 48px

  .member
    width 48px
