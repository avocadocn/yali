.campaigns_page
  .calendar
    width 240px
    float left
  .select_team
    width 500px
    float left
    margin-left 10px
    .select_head
      padding 5px 10px
      border-bottom 1px solid #bce3fd
      width 488px
      background-color #525e70
      color white
      border-top-left-radius 2px
      border-top-right-radius 2px
      .select_btn
        margin-left 10px
        margin-bottom 2px
        padding 3px 10px
        background-color #3ca2e0
        border-radius 2px
      .select_btn.selected
        box-shadow inset 1px 1px 1px #597599
    .teams
      width 100%
      min-height 170px
      overflow-y auto
      max-height 210px
      .team
        padding 5px 10px
        border 1px solid #bce3fd
        border-top 0
        float left
        width 50%
        cursor pointer
        .logo
          width 40px
          height 40px
          float left
        .name, .type
          margin-left 10px
          width 160px
          float left
          white-space nowrap
          overflow hidden
          text-overflow ellipsis
          color #666
          margin-bottom 0
        .name
          margin-bottom 2px
      .team.right
        border-left 0
      .team.selected
        background-color #a6d6f4
      .team.disabled
        background-color #f5f5f5
  .dl_table
    .center
      p
        margin-bottom 0
    .theme
      max-width 150px
      white-space normal
    .close_btn
      margin-left 10px
      background-color #ccc
      padding 4px 5px
      &:hover
        background-color #bbb

    .pages
      text-align center
      .pagination
        margin 0 0 10px
  .row
    .box-title
      float left
    .num_of_page
      float right
      width 50px
      select
        height 20px
    .box-success
      border-color #3c8dbc
      .box-header
        background #3c8dbc
        .fa-trash-o
          font-size 20px
    .box-body.team-list
      min-height 150px
      max-height 210px
      overflow-y auto
    .input-group-addon
      border-radius 4px
      &:first-child
        border-top-right-radius 0
        border-bottom-right-radius 0
      &:last-child
        border-top-left-radius 0
        border-bottom-left-radius 0
    .date_range_select
      float left
      margin-top -4px
      .date_range_start, .date_range_end
        width 145px
        float left
        margin-left 10px
        .date_form_control
          display block
          width 100%
          min-height 25px
          height auto
          padding 3px 5px
          font-size 12px
          line-height 1.42857143
          color #fff
          background-color #fff
          background-image none
          border: 1px solid #ccc
          border-radius 0
          color #999
          float left
        .date_range_label
          padding 3px 5px
      .search_time_button
        float left
        margin-left 10px
        button
          margin-right 10px
          padding 2px 6px
    .table-content
      .row
        .data-table-paginate
          float right
          margin 0
          ul.pagination
            margin 2px 0
            white-space nowrap
          .page
            font-size 12px
            padding 5px 10px
  
  .team_card
    position relative
    width 110px
    float left
    margin-top 10px
    margin-right 15px
    cursor pointer
    height 145px
    padding 10px 10px 0
    border 1px solid #efefef
    box-shadow 0 2px 1px rgba(204, 204, 204, 0.5)
    .dl_info_box
      .info_box_icon
        width 90px
        height 90px
        background-color #fff
        img
          width 90px
          height 90px
      .info_box_content
        .info_box_text
          margin-top 2px
          width 100%
    &.selected
      border 1px solid #f48361
      box-shadow inset -1px -2px 1px rgba(244,131,97,0.5)
      .dl_info_box>.info_box_content>.info_box_text
        color #f48361
