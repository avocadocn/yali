.campaigns_page
  .calendar
    width 240px
    float left
  .select_team
    width 500px
    float left
    margin-left 10px
    .select_head
      padding 5px 10px
      border-bottom 1px solid #bce3fd
      width 488px
      background-color #525e70
      color white
      border-top-left-radius 2px
      border-top-right-radius 2px
      .select_btn
        margin-left 10px
        margin-bottom 2px
        padding 3px 10px
        background-color #3ca2e0
        border-radius 2px
      .select_btn.selected
        box-shadow inset 1px 1px 1px #597599
    .teams
      width 100%
      min-height 170px
      overflow-y auto
      max-height 210px
      .team
        padding 5px 10px
        border 1px solid #bce3fd
        border-top 0
        float left
        width 50%
        cursor pointer
        .logo
          width 40px
          height 40px
          float left
        .name, .type
          margin-left 10px
          width 160px
          float left
          white-space nowrap
          overflow hidden
          text-overflow ellipsis
          color #666
          margin-bottom 0
        .name
          margin-bottom 2px
      .team.right
        border-left 0
      .team.selected
        background-color #a6d6f4
      .team.disabled
        background-color #f5f5f5
  .date
    margin-left 10px
    color #333
    font-size 14px
  .campaign_list
    min-height 300px
    .table_block
      margin 0 10px !important
      .dl_table
        .center
          p
            margin-bottom 0
        .theme
          max-width 150px
          white-space normal
        .close_btn
          margin-left 10px
          background-color #cfcfcf
          padding 4px 5px
          &:hover
            background-color #bbb

    .pages
      text-align center
      .pagination
        margin 0 0 10px
  .table-content
    select
      width 75px
    .search
      position relative
      width 145px
      float right
    .search-time-button
      position absolute
      right -80px
    .date-range-picker
      border 1px solid #ccc
      background #fff
      cursor pointer
      padding 5px 10px
      float left
    .col-xs-6
      .data-table-paginate
        float right
        margin 0
        ul.pagination
          margin 2px 0
          white-space nowrap
  .row.content
    .box-success
      border-color #3c8dbc
      .box-header
        background #3c8dbc
    .box-body
      min-height 150px
      max-height 210px
      overflow-y auto
  .team-card
    position relative
    width 23%
    float left
    margin-top 10px
    margin-right 10px
    cursor pointer
    .info-box
      min-height 45px
      .info-box-icon
        width 50px
        height 50px
        background-color #fff
        img
          position absolute
          width 40px
          height 40px
          top 5px
          left 5px
    &.selected
      .info-box
        background-color #a6d6f4
