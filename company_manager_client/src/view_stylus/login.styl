.login_page
  height 100%
  .wrap
    height 100%
    position relative
    background-color #f4f4f4
    padding-bottom 60px
  // navbar 样式
  .header_container
    width 960px
    margin auto
  .navbar-brand
    float left
    padding 15px 15px
    font-size 18px
    line-height 20px
  .logo
    background-color #3c8dbc !important
  // content 样式
  .login_row
    margin-top 123px
  .dl-form-control
    display block
    width 100%
    min-height 34px
    height auto
    padding 6px 5px
    font-size 12px
    line-height 1.42857143
    background-color #fff
    background-image none
    border 1px solid #ccc
    border-radius 5px
    color #999
    float left
  .text-right
    text-align right
  // footer 样式
  .dl_container
    margin 0 auto
    padding-top 15px
  .dl_footer
    position absolute
    bottom 0
    width 100%
    background-color #f0f0f0
    height 60px
    color #999
    a
      color #999
      margin-left 50px
      font-size 12px
    .dl_container
      padding-top 0
    .dl_row
      min-height 34px
      padding 0
    .text_icp
      line-height 60px