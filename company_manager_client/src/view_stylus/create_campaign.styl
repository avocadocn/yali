@require tools

col_donlerBlue = #3498db;

.create_campaign_page
  .center_wrap
    centerWrap()
  .cp_tabs
    displayFlex()
    border-bottom 1px solid #f4f4f4
  .cp_tab
    flexValue(1)
    padding 5px
    text-align center
    cursor pointer
    border-bottom 2px solid white
    &.active
      border-bottom 2px solid #f39c12
  .cp_tab_divider
    margin 5px 0
    border-left 1px solid #f4f4f4
  .cp_form_group, .cp_form_group_no_flex
    padding 10px
    border-bottom 1px solid #f4f4f4
  .cp_form_group
    displayFlex()
  .cp_form_label
    margin 0
    width 120px
    font-size 14px
    line-height 18px
  .cp_form_control
    flexValue(1)
    border none
    font-size 14px
    line-height 14px
    padding 0

  // special form item
    
  // team list
  .cp_team_list
    position relative
  .cp_team
    font-size 14px
    line-height 18px
    cursor pointer
    transition(color 0.1s)
    &.selected
      color col_donlerBlue
      .cp_team_name
        font-weight bold
    &:hover
      .cp_team_name
        color col_donlerBlue
    .fa
      margin-right 5px
    @media (min-width 768px)
      float left
      width 50%
  .cp_team_name
    transition(font-weight 0.2s)

  // date picker
  .time_group
    padding-top 0
    padding-bottom 0
    .cp_form_label
      padding-top 10px
      padding-bottom 10px
    .form-control
      padding 10px 0
      font-size 14px
      line-height 18px
      height auto
      background-color white
      background-image none
      border none
      border-radius 0
      cursor pointer
    .input-group-addon
      padding-left 22px
      padding-right 2px
      cursor pointer
      border none

  // map
  .cp_marker_icon
    font-size 16px
    cursor pointer

