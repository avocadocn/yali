.members
  .memer_logo
    width 40px
    height 40px
  .pages
    text-align center
    .pagination
      margin 0 0 10px
  .table
    tr
      td
        .btn-primary
          margin-right 5px
        .fa.fa-edit
          font-size 16px
          color #3c8dbc
          cursor pointer
.member_invite_page
  .content
    padding-top 50px
  .qrCodeContainer
    background-color #f7f8fa
    text-align center
    padding 60px 0 30px
    #inviteKeyQrCode
      img
        margin auto
    a
      margin-top 5px
      font-size 12px
  .inviteContainer
    background-color #fff
    padding 20px
    min-height 400px
    hr
      margin 5px 0 10px
    .invite_method
      font-size 14px
    #email
      background-color #fbfbfb
    .btn
      margin-left 20px
    .btn_invite
      background-color #94cd3e
      color #fff
      &:active
        background-color #7EAE34
    .invite_link
      margin-top 20px
  a
    color #3c8dbc
.modal-dialog
  .info_detail
    .row
      margin-left 0
      margin-right 0
    .team
      float left
      width 70px
      text-align center
      margin-right 10px
      margin-bottom 10px
      .team_logo
        width 40px
        height 40px
      .team_name
        max-width 100%
        white-space nowrap
        overflow hidden
        text-overflow ellipsis
    .user_logo
      width 40px
      height 54px
    .edit_logo_container
      background-color #F7F8FA
    .cropper
      margin-left auto
      margin-right auto
      width 100%
      height 240px
      padding 20px 40px
      overflow hidden
      .cropit-image-preview-container
        width 128px
        height 128px
        margin 0 auto
        background-size contain
      .cropit-image-preview
        width 128px
        height 128px
      .cropit-image-background
        opacity 0.2
      .cropit-image-input
        visibility hidden
      .operator_slider
        position relative
        margin-top 10px
        text-align center
        .cropit-image-zoom-input
          display inline-block
          margin 0 10px
          width 120px
          line-height 26px
          vertical-align middle
          -webkit-appearance none
          -moz-appearance none
          appearance none
          height 5px
          -webkit-border-radius 5px
          border-radius 5px
          outline none
        .icon_small, .icon_large
          vertical-align middle
        .icon_large
          font-size 17px
      .operator_button
        position relative
        margin-top 20px
