@require 'view_stylus/tools'

html, body
  height 100%

.layout-boxed
  background-image none
  background-color #d2d6de

.dl_wrapper
  height 100%

//- 通用属性
button
  border none
  outline none
input
  outline none
textarea
  outline none
textarea
  resize none
::-webkit-input-placeholder /* WebKit browsers */
  color #ccc
:-moz-placeholder /* Mozilla Firefox 4 to 18 */
  color #ccc
::-moz-placeholder /* Mozilla Firefox 19+ */
  color #ccc
:-ms-input-placeholder /* Internet Explorer 10+ */
  color #ccc

input:focus::-webkit-input-placeholder /* WebKit browsers */
  color transparent !important
input:focus::-moz-placeholder /* Mozilla Firefox 4 to 18 */
  color transparent !important
input:focus::-moz-placeholder /* Mozilla Firefox 19+ */
  color transparent !important
input:focus:-ms-input-placeholder /* Internet Explorer 10+ */
  color transparent !important

.dl_btn
  margin 0
  color #fff
  background-color #3498DB
  border none
  line-height 1
  position relative
  font-size 12px
  text-align center
  vertical-align middle
  display inline-block
  cursor pointer
  &:hover
    background-color #2980B9
    border-color #2980B9
  &:disabled
    opacity .65

.box
  .center
    text-align center

.loading_box, .content_wrapper_loading_box
  position absolute
  top 0
  z-index -1
  width 100%
  height 100%
  display -webkit-flex
  display flex
  -webkit-align-items center
  align-items center
  -webkit-justify-content center
  justify-content center


.content-wrapper
  position relative

.content_wrapper_loading_box
  z-index 10
  transition(opacity 0.4s ease-in)

.transparent
  opacity 0

.content_container
  transition(opacity 0.2s ease-in)

.main-footer
  transition(opacity 0.2s ease-in)
  .footer_link
    margin-left 5px
.sidebar-menu 
  li.header
    font-size 14px
    
// view stylus 应该放在最后
@require 'view_stylus/*'
@require 'campaign/*'