.calendar_box
  margin-top 0
  .dl_campaign_list
    border 0px

.calendar_title
  margin-top 5px
  font-weight normal

.view_type
  a, span
    margin-left 3px

.schedule_type
  a, span
    margin-left 3px

.view_type, .schedule_type
  .active
    color #aaa

.calendar_nav
  a
    margin-left 5px

