@require('variables')

.campaign_detail

  .component
    border solid 1px gray
    .component_head
      height 30px
      background-color themeColor
      .title
        color #ffffff
        font-size 16px
      .sub_title
        color #ffffff
        font-size 14px
    .component_body
      padding 15px

  .campaign_panel
    display flex

    .component
      margin-bottom 15px
      &:last-child
        margin-bottom 0

    .panel_divider
      width 15px

    .main_panel
      flex 3

    .side_panel
      flex 1

  .detail_card
    .base_info
      display flex

      .logo_container
        width 100px
        text-align center

        .logo
          width 64px
          height 64px

      .info_container
        flex 1

        .start_info
          display flex

          .campaign_info
            flex 1

          .time_info
            flex 1
