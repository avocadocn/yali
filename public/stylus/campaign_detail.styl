@require('variables')

clearfix()
  &:before, &:after
    display table
    content " "
  &:after
    clear both

.campaign_detail

  .campaign_panel
    display flex
    .component
      margin-bottom 10px
      &:last-child
        margin-bottom 0
    .panel_divider
      width 20px
    .main_panel
      width 700px
    .side_panel
      width 240px

  .component
    box-shadow 3px 3px 3px #ddd
    .component_head
      clearfix()
      height 30px
      background-color themeColor
      .component_logo
        margin-left 10px
        height 14px
      .title
        margin-left 10px
        color #ffffff
        font-size 14px
        line-height 30px
      .head_button
        margin-top 5px
        margin-right 10px
        padding 0
        width 35px
        height 20px
        font-size 12px
        line-height 20px
        color #ffffff
        float right
        text-align center
        text-decoration none
    .component_body
      padding 20px
      background-color #ffffff
      .main_text, .text
        font-size 14px
        line-height 18px
        margin 0
        word-break break-all
      .main_text
        color #999999
      .text
        color #cccccc



  .detail_card
    .component_head
      height 35px
      background-color #73a5dd
      .title
        margin-left 15px
        margin-right 15px
        line-height 35px
        font-size 18px
      .sub_title
        line-height 35px
        color #ffffff
        font-size 14px
      .head_button
        margin-top 8px
        margin-right 15px
        width 50px
        height 20px
        font-size 14px
        color #ffffff
        background-color #e7ce23
    .component_body
      .base_info
        display flex

        .logo_container
          width 100px
          .logo
            width 80px
            height 80px

        .info_container
          flex 1
          .title
            font-size 14px
            color #e7ce23
          .start_info
            display flex
            margin-bottom 20px
            .campaign_info
              width 300px
            .time_info
              padding-left 10px
              width 270px
              .remind
                margin-top 15px
                font-size 28px
                color #97d7c6

      .title
        font-size 14px
        color #73a5dd

  .map_card
    .component_head
      background-color #8dd4e6
      .head_button
        background-color #5eb0c5
    .component_body
      padding 0

  .member_card
    .component_head
      background-color #73a5dd
      .head_button
        background-color #4e83be
    .component_body
      .member
        margin-right 9px
        &:last-child
          margin-right 0


  .brief_card
    .component_head
      background-color #73a5dd
      .head_button
        background-color #4e83be