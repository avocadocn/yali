@require('variables')

clearfix()
  &:before, &:after
    display table
    content " "
  &:after
    clear both

.campaign_detail

  for order in (1..10)
    .order-{order}
      order order

  .campaign_panel
    display flex
    .component
      margin-bottom 10px
    .panel_divider
      width 20px
    .main_panel
      width 700px
    .side_panel
      display flex
      flex-flow column
      width 240px

  .component
    box-shadow 3px 3px 3px #ddd
    .component_head
      padding-left 20px
      padding-right 5px
      clearfix()
      height 30px
      background-color themeColor
      .component_logo
        margin-right 10px
        height 14px
      .title
        color #ffffff
        font-size 14px
        line-height 30px
      .head_button
        margin-top 5px
        padding 0
        width 35px
        height 20px
        font-size 12px
        line-height 20px
        color #ffffff
        float right
        text-align center
        text-decoration none
    .component_body
      padding 20px
      background-color #ffffff
      .main_text, .text
        font-size 14px
        line-height 18px
        margin 0
        word-break break-all
      .main_text
        color #999999
      .text
        color #cccccc



  .detail_card
    .component_head
      height 35px
      background-color #73a5dd
      padding-right 15px
      .title
        margin-right 15px
        line-height 35px
        font-size 18px
      .sub_title
        line-height 35px
        color #ffffff
        font-size 14px
        opacity 0.6
      .right_title
        margin-left 15px
        margin-right 0
        float right
      .starting_title
        font-size 14px
      .operator
        cursor pointer
      .head_button
        margin-top 8px
        width 50px
        height 20px
        font-size 14px
        color #ffffff
        background-color #e7ce23
    .component_body

      .multi_team
        display flex
        flex-flow column
        .logo_container
          clearfix()
          border-right none !important
          border-bottom 1px solid #eee
          .unit
            float left
        .info_container
          padding-top 20px

      .base_info
        display flex

        .logo_container
          border-right 1px solid #eee
          .unit
            margin-right 20px
            margin-bottom 20px
            width 80px
            .logo
              width 80px
              height 80px
            .join
              display block
              margin-left auto
              margin-right auto
              margin-top 10px
              padding 0
              width 52px
              height 20px
              font-size 14px
              line-height 20px
              color white
              background-color themeColor

        .info_container
          flex 1
          padding-left 20px
          padding-bottom 20px
          .title
            font-size 14px
            color #e7ce23
          .start_info
            display flex
            margin-bottom 20px
            .campaign_info
              width 300px
            .time_info
              padding-left 10px
              width 270px
              .remind
                margin-top 15px
                font-size 28px
                line-height 30px
                color #97d7c6
        .notice
          .publish
            display flex
            .notice_text
              flex 1
              padding 6px 10px
              height 30px
              color #cccccc
              background-color #fbfbfb
              border solid 1px #d3dbe6
              font-size 14px
            .publish_button
              margin 0
              padding 0
              width 80px
              height 30px
              font-size 14px
              line-height 30px
              color white
              background-color themeColor
      .more_info
        padding-top 20px
        border-top 1px solid #eee
        .sub_title
          margin-right 10px
        .progress
          margin 0
          margin-right 10px
          display inline-block
          width 200px
          height 14px
          border-radius 15px
          background-color #4b6f97
          .progress-bar
            background-color #97d7c6
            box-shadow none
        .bootstrap-tagsinput
          .tag
            background-color #98a8b5
        .tags
          .tag
            margin-right 5px
            display inline-block
            margin-bottom 4px
            padding 2px 5px
            border-radius 5px
            color #ffffff
            background-color #73a4dc
        .deadline
          #deadline
            width 200px
            margin-right 10px
        .detail_input
          padding 6px 10px
          width 100%
          height 30px
          color #cccccc
          background-color #fbfbfb
          border solid 1px #d3dbe6
          font-size 14px
        #campaignDetailToolBar
          background-color #f1f1f1
          border 1px solid #cdcdcd
          border-bottom 0
        .pen-menu
          height 30px
          padding 5px
          z-index auto
          .pen-icon
            height 30px
        #campaignDetail
          background-color #fbfbfb
          border 1px solid #eee
        .editing
          display flex
          margin 15px 0
          .line_text
            line-height 30px
          .people_count
            margin-right 10px
            width 45px
          .date_picker
            margin-right 10px
            width 150px
            input
              display block

        .operator
          margin-top 20px
          clearfix()
          .save, .cancel
            float right
            padding 0
            width 52px
            height 20px
            font-size 14px
            line-height 20px
          .save
            margin-left 10px
            color #fff
            background-color #97d7c6
          .cancel
            color #ffffff
            background-color #cccccc
          .close_campaign
            float left
            color #f3939e
            cursor pointer
            .icon_close
              margin-right 5px


      .title
        font-size 14px
        color #73a5dd

  .map_card
    .component_head
      background-color #8dd4e6
      .head_button
        background-color #5eb0c5
    .component_body
      padding 0

  .member_card
    .component_head
      background-color #73a5dd
      .head_button
        background-color #4e83be
    .component_body
      .member
        margin-right 9px
        &:last-child
          margin-right 0


  .brief_card
    .component_head
      background-color #73a5dd
      .head_button
        background-color #4e83be

  .member_modal
    .modal-content
      border-radius 0
      .component
        height 400px
        box-shadow none
        .component_head
          background-color #73a5dd
          .dl_close
            padding 2px
            .icon_close
              width 14px
              height 14px
        .component_body
          .unit_panel
            clearfix()
            .unit_list
              clearfix()
              display block
              float left
              padding 0
              height 20px
              border-radius 12px
              .unit
                display block
                float left
                padding-left 30px
                padding-right 30px
                font-size 12px
                line-height 20px
                border-left solid 1px #cccccc
                background-color #fbfbfb
                &:first-child
                  border-left none
                  border-bottom-left-radius 1em
                  border-top-left-radius 1em
                &:last-child
                  border-bottom-right-radius 1em
                  border-top-right-radius 1em
                .tab
                  text-decoration none
                  color #cccccc
                  background-color #fbfbfb
              .unit.active
                background-color #cccccc
                .tab
                  color white
                  background-color #cccccc
          .tab-content
            min-height 0
            margin-top 10px

          .member_list
            clearfix()
            .member
              float left
              margin-bottom 18px
              margin-right 10px
              width 57px
              &:nth-child(8n)
                margin-right 0
              .photo
                width 57px
                height 57px
              .nickname
                display block
                margin-top 10px
                color #cccccc
                font-size 12px
                text-align center
                overflow hidden
                text-overflow ellipsis
                white-space nowrap

