@require 'variables'

clearfix()
  &:before, &:after
    display table
    content " "
  &:after
    clear both

responsiveImg()
  display block
  max-width 100%

loading()
  background url(/img/loading.gif) center center no-repeat

centerImg()
  display block
  text-align center
  white-space nowrap
  &:after
    display inline-block
    height 100%
    vertical-align middle
    content " "
  img
    vertical-align middle

dl_shadow()
  -moz-box-shadow 1px 1px 3px secondaryfontColor /* 老的 Firefox */
  box-shadow 1px 1px 3px secondaryfontColor