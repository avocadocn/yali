.dl_campaign_modal
  margin 30px auto
  position relative
  background-color #F0F0F0
  border 1px solid
  background-clip padding-box
  outline 0
  border-radius 0
  box-shadow 0
  webkit-box-shadow 0
  width 480px
  padding 39px
  .dl_modal_header 
    min-height 55px
    color #3ca2e0
    font-size 14px
    .dl_close
      margin-right -30px
      margin-top -30px
      img
        height 14px
    .preStep
      color #bbb
      font-size 12px
  .dl_modal_body
    position relative
    .dl_modal_subtitle
      height 30px
      padding 7px 0
      color #999
      float left
    .dl_modal_container
      width 100%
      float left
      clear left
      .dl-form-control
        min-height 30px
        padding 5px
      .dl_modal_half_container
        width 195px
        float left
        margin-right 10px
        .input-group-addon
          background-color #ccc
          border-color #bbb
          padding 0 8px
          font-size 16px
          span
            color white
      .dl_modal_half_container.end_time
        margin-right 0px
        .dl_modal_half_container
          margin-right 0px
      .dl_modal_input
        border-radius 0
        font-size 12px
      .dl_modal_input_container
        width 340px
        float left
      .dl_modal_button
        width 60px
        height 30px
        float right
        .dl_map_btn
          background-color #73a5dd
          color white
          padding 6px 0
          text-align center
          cursor pointer
          float right
          width 100%
          height 100%
        .search_btn
          width 100%
          height 100%
          padding 9px
          background-size 13px 13px
          background-position 8px 8px
          padding-left 20px !important
      .groups
        max-height 300px
        overflow auto
        width 400px
        .group
          float left
          padding-bottom 5px
          width 48px
      .input-group
        .input-group-btn
          .input-group-addon
            width 60px
            height 30px
            background-color #ccc
            color white
          .dropdown-menu
            width 400px
            margin 0
            left auto
            right 0
            border-top 0
            max-height 160px
            overflow auto
            li
              a
                color #999
      .opponent
        margin-top 20px
        border-bottom 1px solid #dedede
      .team_select
        cursor pointer
        border-bottom 1px solid #dedede
        padding 10px 0
        &:hover
          background-color #f5f5f5
      .active.team_select
        background-image url('/img/icons/ico_07.png')
        background-position 0px 15px
        background-size 30px 30px
        background-repeat no-repeat
      .dl_md_2
        margin-left 40px
    .dl_modal_map_container
      height 150px
      margin-top 30px
      .map_height
        height 150px
  .dl_modal_footer
    width 100%
    height 50px
    margin-top 40px
    .dl_modal_btn
      width 100%
      height 100%
      font-size 14px
