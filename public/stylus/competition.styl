@require('variables')
.dl_detail_main
  width 640px
  margin-right 30px
  float left
  .competition_content
    .team_info
      padding 20px 0
      border 1px solid #ddd
      border-top 0
      background-color #fbfbfb
    .dl_score
      width 90px
      height 50px
      font-size 30px
      line-height 120%
      color black
    .dl_score_colon
      font-size 30px
      text-align center
      line-height 100%
      padding 0
      color black
      display inline-block
      height 60px
    .score_left
      text-align right
      padding 0
    .score_right
      text-align left
      padding 0
    .dl_left
      margin-left -30px
    .football
      margin-bottom 20px
      padding 10px
      .img_contain
        width 495px
        height 334px
        background-image url('/img/football.jpg')
        .formatField
          position relative
          padding 0
          height 334px
          .teamMember
            position absolute
    .team_logo
      width 120px
      height 120px
      border solid 1px #ccc
    .members
      margin 20px 0
      padding 10px 0
      background-color #fbfbfb
      border 1px solid #ddd
    .team_member_logo
      width 40px
      height 40px
    .teamMember[draggable=true]
      cursor move
    // .donler_dragover
    //   webkitTransform otate(-45deg)
    //   MozTransform rotate(-45deg)
    //   msTransform rotate(-45deg)
    //   OTransform rotate(-45deg)
    //   transform rotate(-45deg)
.side
  .competition_detail
    border 1px solid #ddd
    padding 5px
    margin-bottom 10px
    .dl_detail_row
      min-width 300px
      min-height 35px
      font-size 12px
      margin-bottom 5px
      .dl_detail_label
        min-width 70px
        padding 5px 10px
        background-color #f1f6fa
        float left
      .dl_detail_detail
        padding 5px 10px
        min-width 200px
        max-width 480px
        width 200px
        float left
        word-break break-all
        white-space normal
  .map_size
    width  290px
    height 210px