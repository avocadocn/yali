@require('variables')
.dl_detail_main
  width 640px
  margin-right 30px
  float left
  .competition_content
    .team_info
      padding 20px 0
      border 1px solid #ddd
      border-top 0
      background-color #fbfbfb
      .team_left
        width 229px
        float left
      .score_panel
        width 180px
        float left
        .VS
          height 30px
          padding-top 10px
        .score
          width 180px
          padding-top 10px
          height 60px
          .score_left
            text-align right
            padding 0
            width 85px
            float left
            height 40px
          .score_colon
            width 10px
            text-align center
            float left
          .score_right
            text-align left
            padding 0
            width 85px
            float right
            height 40px
          .dl_score_input
            height 40px
            width 45px
            font-size 30px
            text-align center
        .score_button
          width 180px
          height 30px
          text-align center
          float left
          .dl_btn_right
            height 30px
            padding 8px
      .team_right
        width 229px
        float right
      .team_name
        text-align center
        width 120px
        float left
    .dl_score
      width 85px
      height 40px
      font-size 30px
      line-height 120%
      color black
    .dl_score_colon
      font-size 34px
      text-align center
      line-height 100%
      padding 0
      color black
      display inline-block
    .dl_left
      margin-left -30px
    .football
      margin-bottom 20px
      padding 10px 0
      .img_contain
        width 495px
        height 334px
        background-image url('/img/football.jpg')
        .formatField
          position relative
          padding 0
          height 334px
          .teamMember
            position absolute
    .team_logo
      width 120px
      height 120px
      border solid 1px #ccc
    .members
      margin 20px 0
      padding 10px 0
      background-color #fbfbfb
      border 1px solid #ddd
    .team_member_logo
      width 40px
      height 40px
    .teamMember[draggable=true]
      cursor move
