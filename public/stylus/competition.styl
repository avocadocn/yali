.side
  .dl_detail_row
    min-width 300px
    min-height 35px
    font-size 12px
    margin-bottom 5px
    .dl_detail_label
      min-width 70px
      padding 5px 10px
      background-color #f1f6fa
      float left
    .dl_detail_detail
      padding 5px 10px
      min-width 200px
      max-width 480px
      width 200px
      float left
      word-break break-all
      white-space normal