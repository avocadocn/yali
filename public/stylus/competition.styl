    //   webkitTransform otate(-45deg)
    //   MozTransform rotate(-45deg)
    //   msTransform rotate(-45deg)
    //   OTransform rotate(-45deg)
    //   transform rotate(-45deg)
.side
  .competition_detail
    border 1px solid #ddd
    padding 10px
    background-color #fff
    .dl_detail_row
      min-width 300px
      min-height 30px
      font-size 12px
      margin-bottom 5px
      .dl_detail_label
        min-width 70px
        padding 5px 10px
        background-color #f1f6fa
        float left
      .dl_detail_detail
        padding 5px 10px
        min-width 200px
        max-width 480px
        width 200px
        float left
        word-break break-all
        white-space normal
  .map_container
    background-color #fff
    border 1px solid #e6e6e6
    padding 10px
    margin-top 20px
    .map_size
      width  268px
      height 210px
  .photo_container
    background-color #fff
    border 1px solid #e6e6e6
    padding 20px 10px
    margin-top 20px
    .photo_album
      padding 0
      border 0
