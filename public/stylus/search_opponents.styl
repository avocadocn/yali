.search_opponents
  color #999
  .head_container
    background-color #fff
    border 1px solid #eee
    border-bottom 0
    .headline
      height 30px
      width 100%
      background-color #f48361
      color #fff
      line-height 1
      font-size 14px
      padding 10px 20px
    .my_teams
      margin 20px
      .title
        line-height 30px
      .units
        .unit
          float left
          .logo
            width 100px
            height 100px
          .text
            width 100px
            text-align center
            overflow hidden
            text-overflow ellipsis
            white-space nowrap
          .button
            width 100px
            .select
              background-color #f48361
            .recommand
              background-color #3ca2e0
    .selected_team
      padding 10px 20px
      line-height 1
      .my_team
        .logo
          width 50px
          height 50px
          float left
        .text
          width 700px
          padding-left 20px
          float left
          .tname
            width 100%
            height 25px
            float left
          .type
            float left
            width 70px
            color #666
          .leader
            float left
        .button
          float right
          width 100px
          height 30px
          text-align center
          padding 9px
          margin-top 10px
  .tab_view
    width 100%
    background-color #fff
    .opponnet_tab_style
      width 320px
      color #fff
      float left
      text-align center
      a
        color #fff
        font-size 14px
  .unactive
    .opponnet_tab_style
      background-color #ccc !important
    .opponnet_tab_style.nearbyTeam
      background-color #afafaf !important
  .active
    .nearbyTeam
      background-color #afafaf
    .sameCity
      background-color #fec053
      a
        &:hover
          background-color #fec053
    .nearbyTeam
      background-color #3ca2e0
      a
        &:hover
          background-color #3ca2e0
    .search
      background-color #19bdc7
      a
        &:hover
          background-color #19bdc7
    .result
      margin 20px
      background-color #fbfbfb
      min-height 400px
      //-通用
      .text
        .title
          font-size 14px
          color #666
          width 100%
          float left
          line-height 1
        .content
          width 100%
          float left
      .homecourt
        .text
          color #999
          cursor pointer
        .text.active
          color #666
      .homecourtSetting
        .court
          width 100%
      .map
        float left
        .fullMap
          width 570px
          height 560px
      .teamlist
        background-color #efefef
        float left
        width 350px
        height 620px
        .headline
          height 50px
          width 100%
          padding 20px
          font-size 14px
          line-height 1
        .team.selected
          background-color #fbfbfb
          border-left 1px solid #efefef
        .team
          width 100%
          float left
          padding 10px 20px
          height 50px
          .logo
            width 30px
            height 30px
            float left
          .text
            width 250px
            padding 0 10px
            float left
            .title
              margin-bottom 3px
        .page_nav
          position absolute
          bottom 20px
          height 60px
          width 350px
          padding 20px
          border-top 1px solid #ccc
          ul
            float right
            li
              float left
              a
                color #999
                padding 0 5px
            .active
              a
                color #3ca2e0

      .detail
        background-color #fbfbfb
        padding 20px
        float left
        width 570px
        height 620px
        .detailHead
          width 100%
          padding-bottom 20px
          border-bottom 1px solid #ccc
          .logo
            float left
            width 70px
            height 70px
          .text
            width 380px
            float left
            padding 0 20px
            .title
              margin-bottom 5px
          .buttons
            float left
            width 60px
        .detailContent
          width 100%
          margin-left 70px
          padding 20px
          .block
            margin-bottom 30px
            .title
              float left
              color #666
              width 100px
            .text
              width 270px
              float left

