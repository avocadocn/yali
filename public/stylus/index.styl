@require('variables')

.index_container
  width 100%
  min-width miniPageWidth
  max-width maxPageWidth
  margin 0 auto

.header_container
  width miniPageWidth
  margin auto
.index_background
  background-color #525d6f
  height 100%
  margin-top -50px
  .promo
    width 100%
    min-height 750px
    height 100%
    margin 0 auto
    background url('/img/index/cake.png') no-repeat -30px bottom,
      url('/img/index/luggage.png') no-repeat -300px top,
      url('/img/index/dl_promo_bg.jpg') center center no-repeat
    .promo_background
      min-width 960px
      min-height 750px
      height 100%
      background url('/img/index/foot.png') no-repeat 76% bottom,
        url('/img/index/basketball.png') no-repeat 93% 50%,
        url('/img/index/ukelele.png') no-repeat 55% top,
        url('/img/index/bbq.png') no-repeat 94% top
      .index_container
        width auto
        min-width 960px
        max-width 1280px
        margin 0 auto
        .regbox
          width 410px
          float left
          margin-top 140px
          margin-left 17%
          text-align center
          position absolute
          .reginfo
            width 100%
            color #fff
            margin 20px 0 40px
            p
              line-height 1
              margin-bottom 10px
              font-size 18px
          .btn_reg
            width 270px
            height 50px
            border-radius 4px
            box-shadow 1px 1px 3px #343c47
            margin-bottom 25px
            color #fff
            background-color redBtnColor
            display block
            margin 0 auto 25px
            padding 17px
            font-size 18px
            &:hover
              background-color redBtnHoverColor
          .appinfo
            width 270px
            margin 0 auto
            .barcode
              float left
            .btn_app
              float left
              margin-left 4px
    .index_images
      position absolute
    .luggage
      right 79%
    .cake
      bottom 0
      right 70%
.index_footer
  min-width miniPageWidth
  background-color #2c3e50
  margin-top -60px
  a 
    color footerFontColor
@media screen and (max-height: 750px)
  .promo_background , .promo , .index_background 
    height 750px




