.index_container
  width 100%
  min-width miniPageWidth
  max-width maxPageWidth
  margin 0 auto
.header_container
  width miniPageWidth
  margin auto
.index_background
  background-color #525d6f
  .promo
    width 100%
    height 750px
    margin 0 auto
    background url('/img/index/cake.png') no-repeat bottom left -30px,
      url('/img/index/luggage.png') no-repeat top left -220px,
      url('/img/index/dl_promo_bg.jpg') center center no-repeat
    .promo_background
      //- background url('/img/index/luggage.png') no-repeat
      //- url('/img/index/cake.png') no-repeat,
      min-width 960px
      height 750px
      background url('/img/index/foot.png') no-repeat bottom right 24%,
        url('/img/index/basketball.png') no-repeat 93% 50%,
        url('/img/index/ukelele.png') no-repeat top right 45%,
        url('/img/index/bbq.png') no-repeat top right 6%
      .index_container
        width auto
        min-width 960px
        max-width 1280px
        margin 0 auto
        .left_background
          margin-left -34%
          width 52%
          height 720px
          float left
          //- background url('/img/index/luggage.png') no-repeat 50% 0
          //- .cake
          //-   float left
          //-   margin-left -30%
          //-   width 50%
          //-   background url('/img/index/cake.png') no-repeat bottom right 20%
        .regbox
          width 330px
          float left
          margin-top 140px
          text-align center
          .reginfo
            width 100%
            color #fff
            margin 40px 0
            p
              line-height 1
              margin-bottom 10px
              font-size 18px
          .btn_reg
            width 270px
            height 50px
            border-radius 4px
            box-shadow 1px 1px 3px #343c47
            margin-bottom 25px
            color #fff
            background-color redBtnColor
            display block
            margin 0 auto 25px
            padding 17px
            font-size 18px
            &:hover
              background-color redBtnHoverColor
          .appinfo
            width 270px
            margin 0 auto
            .barcode
              float left
            .btn_app
              float left
              margin-left 4px
    .index_images
      position absolute
    .luggage
      right 79%
    .cake
      bottom 0
      right 70%
.index_footer
  min-width miniPageWidth
  background-color #2c3e50
  a 
    color footerFontColor




