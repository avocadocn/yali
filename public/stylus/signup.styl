bodyColor = rgba(251, 214, 0, 1)
html
  font-family STHeiti,"Microsoft YaHei",MingLiu,"Helvetica Neue",Helvetica,Arial,sans-serif
  font-size 12px
  line-height 18px
[ng\:cloak], [ng-cloak], [data-ng-cloak], [x-ng-cloak],
.ng-cloak, .x-ng-cloak,
.ng-hide 
    display none !important
::-webkit-input-placeholder /* WebKit browsers */
  color #fff
:-moz-placeholder /* Mozilla Firefox 4 to 18 */
  color #fff
::-moz-placeholder /* Mozilla Firefox 19+ */
  color #fff
:-ms-input-placeholder /* Internet Explorer 10+ */
  color #fff
body
  margin 0
  section
    padding 10px
  input ,select
    outline 0
    border 0
    width 100%
    height 44px
    font-size 14px
    padding 13px
    background-color #B95B26
    color #fff
    border-radius 6px
  input.ng-invalid.ng-dirty
    background-color #A03E3E
  button
    font-size 14px
    border 0
  select
    background-color transparent
.mobile_signup
  background-image url('/img/signup/phone_bg.png')
  background-repeat no-repeat
  background-size cover
  width 100%
  overflow-x hidden
  .singup
    text-align center
  .fill_in
    width 73%
    margin auto
    margin-top 100px
    border-radius 28px
    padding 0 24px 24px
    background-image url('/img/signup/board_bg.png')
    background-size 140px 20px
    background-repeat repeat
    text-align center
    position relative
    input, .select_container
      margin-top 10px
    .option_place
      display none
    .fill_in_title
      width 185px
      height 55px
      margin-top -20px
    .select_container
      border-radius 6px
      background-color #B95B26
      background-image url('/img/signup/arrow.png')
      background-size 17px 10px
      background-position 95% 17px
      background-repeat no-repeat
    .validate
      display block
      .verification
        width 48%
      .get_validate
        border-radius 6px
        background-color #fff
        color #666
        height 44px
        width 48%
        margin-left 4%
    .tip
      color #fff
      margin-left 12px
      margin-bottom 0
      text-align left
  .submit
    background-image url('/img/signup/submit.png')
    background-size 239px 50px
    background-repeat no-repeat
    height 50px
    width 239px
    margin 30px auto 0
    background-color transparent
  .ball
    position absolute
  .ball_1, .ball_2 ,.ball_3
    background-image url('/img/signup/star.png')
    background-size 68px 64px
    width 68px
    height 64px
  .ball_1
    left 66px
    top -35px
  .ball_2
    right -28px
    top -12px
  .ball_3
    right 6px
    top 362px
  .ball_4
    background-image url('/img/signup/star_2.png')
    background-size 110px 79px
    width 110px
    height 79px
    left -17px
    top 78px
  .ball_5
    background-image url('/img/signup/star_3.png')
    background-size 68px 69px
    width 68px
    height 69px
    left 8px
    top 245px