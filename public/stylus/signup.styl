bodyColor = rgba(251, 214, 0, 1)
html
  font-family STHeiti,"Microsoft YaHei",MingLiu,"Helvetica Neue",Helvetica,Arial,sans-serif
  font-size 12px
  line-height 18px
[ng\:cloak], [ng-cloak], [data-ng-cloak], [x-ng-cloak],
.ng-cloak, .x-ng-cloak,
.ng-hide 
    display none !important
::-webkit-input-placeholder /* WebKit browsers */
  color #fff
:-moz-placeholder /* Mozilla Firefox 4 to 18 */
  color #fff
::-moz-placeholder /* Mozilla Firefox 19+ */
  color #fff
:-ms-input-placeholder /* Internet Explorer 10+ */
  color #fff
body
  margin 0
  input ,select
    outline 0
    border 0
    width 100%
    height 44px
    font-size 14px
    padding 13px
    background-color #B95B26
    color #fff
    border-radius 6px
  input.ng-invalid.ng-dirty
    background-color #A03E3E
  button
    font-size 14px
    border 0
  select
    background-color transparent
.mobile_signup ,.pc_signup
  background radial-gradient(500px,#928484,#322c52,#2a2545)
  width 100%
  overflow-x hidden
  background-color #25213C
  .signup
    text-align center
    width 100%
    overflow-x hidden
  .fill_in
    width 73%
    max-width 330px
    min-height 300px
    margin auto
    margin-top 75px
    border-radius 28px
    padding 0 24px 24px
    background-image url('/img/signup/board_bg.png')
    background-size 140px 20px
    background-repeat repeat
    text-align center
    position relative
    input, .select_container
      margin-top 10px
      height 44px
    .option_place
      display none
    .fill_in_title
      width 185px
      height 55px
      margin-top -20px
    .select_container
      border-radius 6px
      background-color #B95B26
      background-image url('/img/signup/arrow.png')
      background-size 17px 10px
      background-position 95% 17px
      background-repeat no-repeat
    .validate
      display block
      .verification
        width 48%
      .get_validate
        border-radius 6px
        background-color #fff
        color #666
        height 44px
        width 48%
        margin-left 4%
    .tip
      color #fff
      margin-left 12px
      margin-bottom 0
      text-align left
  .submit
    background-image url('/img/signup/submit.png')
    background-size 239px 50px
    background-repeat no-repeat
    height 50px
    width 239px
    margin 30px auto 0
    background-color transparent
    animation-duration 2s
  .ball
    position absolute
    animation-duration 2s
  .ball_1, .ball_2 ,.ball_3
    background-image url('/img/signup/star.png')
    background-size 68px 64px
    width 68px
    height 64px
  .ball_1
    left 66px
    top -35px
  .ball_2
    right 0px
    top -12px
    width 40px
  .ball_3
    right 6px
    top 362px
  .ball_4
    background-image url('/img/signup/star_2.png')
    background-size 110px 79px
    width 110px
    height 79px
    left -17px
    top 78px
  .ball_5
    background-image url('/img/signup/star_3.png')
    background-size 68px 69px
    width 68px
    height 69px
    left 3%
    top 245px
.pc_signup
  background radial-gradient(600px,#928484,#322c52,#2a2545)
  .fill_in
    margin-top 110px
  .ball_1
    left 20%
  .ball_3
    right 15%
    bottom 100px
    top inherit
  .ball_4
    left 5%
    top 200px
  .ball_5
    left 11%
    top 400px
.modal
  position absolute
  width 100%
  height 100%
  left 0
  top 0
  text-align center
  font-size 20px
  .wrap
    opacity .8
    background-color #000
    width 100%
    height 105%
    z-index 10
    position absolute
  .girl_laugh
    width 315px
    height 190px
    margin auto
    margin-top 60px
    background-image url('/img/signup/girl_laugh.png')
    background-size 312px 190px
    background-position top center
    background-repeat no-repeat
    text-align center
    padding-top 162px
    z-index 20
    position relative
    .board
      background-color #F6C513
      width 272.5px
      height 290px
      border-radius 0 0 20px 20px
      position absolute
      top 190px
      left 22.25px
    .submit_sucess
      width 100px
      height 100px
      margin -30px auto 0
      animation-delay .5s
    .submit_success_text
      width 202px
      height 72px
      margin -90px auto 0
    .download_text
      color #fff
      position relative
    .rubberBand, .submit_success_text
      animation-delay 1.5s
    .know_button
      width 239px
      height 50px
      margin-top 35px
      position relative
.Android
  .select_container
    height 34px !important
    padding 13px 13px 0
    select
      height 22px