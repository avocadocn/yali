bodyColor = rgba(251, 214, 0, 1)
html
  font-family STHeiti,"Microsoft YaHei",MingLiu,"Helvetica Neue",Helvetica,Arial,sans-serif
  font-size 12px
  line-height 18px
[ng\:cloak], [ng-cloak], [data-ng-cloak], [x-ng-cloak],
.ng-cloak, .x-ng-cloak,
.ng-hide 
    display none !important
header
  background-color bodyColor
  height 25px
  padding 10px
  font-size 16px
  .nav
    width 320px
    text-align center
    margin 0 auto
    li
      float left
      width 100px
      border-right
      a
        text-decoration none
        color black
        font-size 14px
body
  margin 0
  section
    padding 10px
  input
    outline 0
    border-radius 5px
    border 1px solid #ccc
    width 100%
    height 34px
    font-size 14px
    padding 2px 5px
  .search_company
    width 80%
    //- text-align center
    margin auto
    .step
      width 100%
      text-align center
      font-size 16px
    .search_input
      margin-top 10px
    .nearby
      margin-top 20px
      font-size 16px
      width 100%
      border-bottom 1px solid #666
    .companies
      .no_companies
        color #666
      .company
        margin-left 10px
        display block
        line-height 20px

