@require('variables')

input()
  padding 6px 10px
  height 30px
  color #cccccc
  background-color #f3fcff
  border solid 1px #d3dbe6
  font-size 14px

.rich_comment
  .component_head
    height 35px !important
    background-color #97d7c6 !important
    padding-right 15px !important
    .title
      font-size 18px !important
      line-height 35px !important
  .component_body
    padding 0 !important

    .rich_comment_form
      padding 20px
      padding-top 40px
      border-bottom 1px solid #eee

      .comment_control
        display flex
        .user_photo
          width 32px
          height 32px
        .content
          input()
          margin-left 10px
          flex 1
        .img_selector
          margin-left 10px
          width 30px
          height 30px
          cursor pointer
          background-color #d2e1f1
          text-align center
          .upload_img
            margin-top 7px
            width 20px
        .publish
          margin-left 5px
          padding 0
          width 70px
          height 30px
          color #fff
          background-color #73a5dd
          font-size 14px
          line-height 30px

      .preview_box
        display flex
        margin-top 5px
        padding-left 42px
        .preview_img_wrap
          position relative
          margin-right 5px
          .close
            display none
            position absolute
            top 0
            right 0
          &:hover
            .close
              display block
    .comment
      position relative
      margin-top 20px
      display flex
      .comment_user_info
        float left
        max-width 50px
        p
          text-align center
        .user_photo
          width 50px
          height 50px
        .user_name
          text-decoration none
      .comment_content_panel
        float left
        margin-left 20px
        flex 1
        .comment_content
          padding 10px
          background-color contentBgColor
          border solid 1px contentBdColor
          min-height 50px
          word-break break-all
          overflow hidden
          margin-bottom 4px
          
          .comment_img_box
            .img_list_box
              width 350px
              .list_img
                display block
                float left
                margin-top 5px
                margin-left 5px
                width 100px
                height 100px
                background url(/img/loading.gif) center center no-repeat
            .img_slider_box
              .preview
                position relative
                margin-bottom 10px
                .preview_img
                  background url("/img/loading.gif") center center no-repeat
                .operator
                  position absolute
                  top 0
                  left 0
                  width 100%
                  height 100%
                  display flex
                  z-index 1
                  .img_pre
                    flex 1
                    cursor w-resize
                  .img_shrink
                    flex 2
                  .img_next
                    flex 1
                    cursor e-resize
              .nav
                text-align center
                .thumb
                  width 40px
                  height 40px
                  margin-right 5px
                  background url("/img/loading.gif") center center no-repeat
            .img_single_thumb
              background url("/img/loading.gif") center center no-repeat
            .preview_img
              background url("/img/loading.gif") center center no-repeat
          margin-top 5px
          padding 10px
          background-color contentBgColor
          .reply_form
            margin-bottom 15px
            display flex
            .reply_input
              flex 1
          .reply
            word-break break-all

    .pager
      .pagination
        margin 0
      .novisible
        opacity 0
      li>a
        border-radius 0

.score_board
  margin 0