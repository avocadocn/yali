@require('variables')

input()
  padding 6px 10px
  height 30px
  color #cccccc
  background-color #f3fcff
  border solid 1px #d3dbe6
  font-size 14px

clearfix()
  &:before, &:after
    display table
    content " "
  &:after
    clear both

.rich_comment
  .component_head
    height 35px !important
    background-color #97d7c6 !important
    padding-right 15px !important
    .title
      font-size 18px !important
      line-height 35px !important
  .component_body
    padding 0 !important

    .rich_comment_form
      padding 20px
      padding-top 40px
      border-bottom 1px solid #eee

      .comment_control
        display flex
        display -webkit-flex
        .user_photo
          width 30px
          height 30px
        .content
          input()
          margin-left 10px
          flex 1
        .img_selector
          margin-left 10px
          width 30px
          height 30px
          cursor pointer
          background-color #d2e1f1
          text-align center
          .upload_img
            margin-top 7px
            width 20px
        .publish
          margin-left 5px
          padding 0
          width 70px
          height 30px
          color #fff
          background-color #73a5dd
          font-size 14px
          line-height 30px
          &[disabled]
            opacity .65

      .preview_box
        display flex
        display -webkit-flex
        margin-top 5px
        padding-left 40px
        .preview_img_wrap
          position relative
          margin-right 5px
          .close
            display none
            position absolute
            top 0
            right 0
          &:hover
            .close
              display block
    .comment
      padding 20px
      border-bottom 1px solid #eee
      display flex
      display -webkit-flex
      .user_name
        text-decoration none
        color #b1c6d2
      
      .comment_user_info
        padding-top 3px
        width 40px
        .user_photo
          width 30px
          height 30px
      .comment_content_panel
        flex 1
        -webkit-flex 1
        .comment_content
          word-break break-all
          overflow hidden
          margin-bottom 4px
          .comment_img_box
            margin-top 20px
            margin-bottom 10px
            .img_list_box
              width 350px
              .list_img
                display block
                float left
                margin-bottom 5px
                margin-right 5px
                width 100px
                height 100px
                background url(/img/loading.gif) center center no-repeat
            .img_slider_box
              .preview
                position relative
                margin-bottom 10px
                .preview_img
                  background url("/img/loading.gif") center center no-repeat
                .operator
                  position absolute
                  top 0
                  left 0
                  width 100%
                  height 100%
                  display flex
                  display -webkit-flex
                  z-index 1
                  .img_pre
                    flex 1
                    -webkit-flex 1
                    cursor w-resize
                  .img_shrink
                    flex 2
                    -webkit-flex 2
                  .img_next
                    flex 1
                    -webkit-flex 2
                    cursor e-resize
              .nav
                text-align center
                .thumb
                  width 40px
                  height 40px
                  margin-right 5px
                  background url("/img/loading.gif") center center no-repeat
            .img_single_thumb
              background url("/img/loading.gif") center center no-repeat
              height 84px
            .preview_img
              background url("/img/loading.gif") center center no-repeat

        .comment_footer
          .text
            font-size 12px
          .operator
            .text
              margin-left 10px
            .reply
              color #73a5dd

        .replies
          margin-top 20px
          padding 10px
          background-color #f8f7f7
          .reply_form
            margin-bottom 15px
            display flex
            display -webkit-flex
            .reply_input
              flex 1
              -webkit-flex 1
          .reply
            clearfix()
            margin 8px 0
            word-break break-all
            .user_name
              margin-right 10px
            .reply_date
              margin-left 10px
            .reply_date
              font-size 12px
            .operator
              float right
              .text
                margin-left 5px
                font-size 12px

    .pager
      margin 0
      padding 20px
      .pagination
        margin 0
      .novisible
        opacity 0
      li>a
        border-radius 0


.simple_comment
  .component_body
    .rich_comment_form
      float left
      padding 10px
      width 100%
      .comment_control
        display block
        .content
          height 50px
          margin 0
        .img_selector
          background-color #fff
          margin 10px 0
        .publish
          float right
          margin 10px 0
      .preview_box
        display block
        .remind
          display block
        .preview_img_wrap
          float left
          width 48px
          height 48px
    .comment
      padding 10px
      clear both
      .comment_user_info
        margin-right 10px
        width 30px
        .user_name
          text-align center
          max-width 100%
          overflow hidden
          text-overflow ellipsis
          white-space nowrap
      .comment_content_panel
        .comment_content
          background-color #F3FDFF
          padding 10px
          .comment_img_box
            .img_list_box
              width 100%
              .list_img
                width 70px
                height 70px
        .replies
          .reply_form
            margin-bottom 0

.score_board
  .component_head
    background-color #333333 !important
  .component_body
    padding 20px 10px 5px !important
  .score_board_body
    display flex
    display -webkit-flex
    padding 0 20px
    .playing_team_0
      order 1
      -webkit-order 1
    .playing_team_1
      order 3
      -webkit-order 3
    .playing_team
      width 69px
      text-align center
      .team_logo
        width 69px
        height 69px
      .team_name
        font-size 12px !important
        white-space nowrap
        margin 5px 0 !important
        display block
        overflow hidden
        text-overflow ellipsis
      .show_score
        display flex
        display -webkit-flex
        color white
        height 20px
        line-height 20px
        font-size 14px
        text-align center
        .score, .result
          background-color #999999
        .score
          flex 1
          -webkit-flex 1
        .result
          flex 1
          -webkit-flex 1
          margin-left 1px
      .show_score.active
        .score, .result
          background-color #ec6a6a
      .editing
        .score
          width 100%
          margin-bottom 10px
          font-size 12px
          text-align center
          color #ccc
          background-color #fbfbfb
          border solid 1px #ccc
        .results
          clearfix()
          .result
            display block
            float left
            padding 0
            width 23px
            height 20px
            background-color #999999
            color white
            line-height 20px
            font-size 14px
            text-align center
          .result.active
            background-color #ec6a6a
    .vs
      flex 1
      -webkit-flex 1
      order 2
      -webkit-order 2
      padding-top 25px
      text-align center
      font-size 28px
      color #ec6a6a
  .score_board_operator
    margin-top 20px
    padding-right 20px
    clearfix()
    .operator
      float right
      margin-left 5px
      padding 0 10px
      height 20px
      line-height 20px
      color white
      background-color #3ca2e0
      font-size 14px
      text-align center
    .cancel
      background-color #cccccc
  .score_board_footer
    clearfix()
    color #ccc
    margin-top 20px
    .remind_text
      float left
    .getlog
      float right
      cursor pointer
  .logs
    .log
      border-top solid 1px #cccccc
      .title
        margin 0
        margin-top 5px
        color #cccccc
        font-size 12px
        line-height 12px
      .content
        margin 5px 0
        color #cccccc
        font-size 12px
        line-height 14px








