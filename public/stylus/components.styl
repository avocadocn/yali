@require('variables')
.rich_comment_box
  width 100%
  background-color #fff
  border 1px solid #ddd
  padding 10px 20px !important
  margin-top 10px
  .rich_comment_form
    .comment_textarea
      float none
      height 60px
      background-color contentBgColor
      border-color contentBdColor
      border-radius 0
    .operator
      margin-top 5px
      .preview_box
        margin-top 5px
        .preview_img_wrap
          position relative
          float left
          margin-right 5px
          .close
            display none
            position absolute
            top 0
            right 0
          &:hover
            .close
              display block
  .comment
    position relative
    margin-top 20px
    display flex
    .comment_user_info
      float left
      max-width 50px
      p
        text-align center
      .user_photo
        width 50px
        height 50px
      .user_name
        text-decoration none
    .comment_content_panel
      float left
      margin-left 20px
      flex 1
      .comment_content
        padding 10px
        background-color contentBgColor
        border solid 1px contentBdColor
        min-height 50px
        word-break break-all
        overflow hidden
        margin-bottom 4px
        
        .comment_img_box
          .img_list_box
            width 350px
            .list_img
              display block
              float left
              margin-top 5px
              margin-left 5px
              width 100px
              height 100px
              background url(/img/loading.gif) center center no-repeat
          .img_slider_box
            .preview
              position relative
              margin-bottom 10px
              .preview_img
                background url("/img/loading.gif") center center no-repeat
              .operator
                position absolute
                top 0
                left 0
                width 100%
                height 100%
                display flex
                z-index 1
                .img_pre
                  flex 1
                  cursor w-resize
                .img_shrink
                  flex 2
                .img_next
                  flex 1
                  cursor e-resize
            .nav
              text-align center
              .thumb
                width 40px
                height 40px
                margin-right 5px
                background url("/img/loading.gif") center center no-repeat
          .img_single_thumb
            background url("/img/loading.gif") center center no-repeat
          .preview_img
            background url("/img/loading.gif") center center no-repeat
        margin-top 5px
        padding 10px
        background-color contentBgColor
        .reply_form
          margin-bottom 15px
          display flex
          .reply_input
            flex 1
        .reply
          word-break break-all

  .pager
    .pagination
      margin 0
    .novisible
      opacity 0
    li>a
      border-radius 0

.score_board
  margin 0