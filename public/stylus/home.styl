@import "nib"
bodyColor = rgba(251, 214, 0, 1)
body
  margin 0
  font-family STHeiti,"Microsoft YaHei",MingLiu,"Helvetica Neue",Helvetica,Arial,sans-serif
header
  background-color bodyColor
  padding 10px
  height 700px
  position relative
  .nav
    width 500px
    text-align center
    margin 0 auto
    &:before
      content ""
      display table
    &:after
      content ""
      display table
      clear both
    li
      list-style none
      float left
      width 99px
      border-right 1px solid black
      a
        text-decoration none
        color black
      &:last-child
        width 100px
        border-right none
  .img
    position absolute
    &.phone
      bottom -2px
      left 50%
    &.logo
      left 25%
      top 10%
    &.slogan
      left 27%
      top 40%
      color #FFF
      font-size 50px
      width 340px
      text-indent -70px
      font-family Courier New
  .download
    position absolute
    left 50%
    margin-left -400px
    bottom 20px
    width 320px
    height 125px
    .qrcode
      width 125px
      height 125px
      border-radius 5px
    .ios, .android
      width 180px
      height 50px
    .ios
      position absolute
      left 140px
      top 0
    .android
      position absolute
      left 140px
      top 75px
footer
  background-color bodyColor
  padding 30px 10px
  text-align center
  p
    font-size 12px
  .nav
    width 400px
    margin 0 auto
    &:before
      content ""
      display table
    &:after
      content ""
      display table
      clear both
    li
      list-style none
      float left
      width 99px
      border-right 1px solid black
      a
        text-decoration none
        color black
      &:last-child
        width 100px
        border-right none
.container
  >section
    text-align center
    background linear-gradient(to bottom,#FFF,#FFF 95%,#F8F8F8)
    min-height 400px
    h1
      font-size 32px
    p 
      font-size 22px
    ul
      width 350px
      line-height 20px
      margin 0 auto
      font-size 18px
      text-align left
      margin-bottom 30px
      color bodyColor
      li
        .content
          font-size 14px
          color black
    &.new_student
      img.img
        width 20%
        &.center
          position relative
          bottom -2px
          z-index 1
        &.left
          position relative
          bottom 90px
          left 15px
          z-index 2
        &.right
          position relative
          bottom 70px
          right 25px
          z-index 2
    &.team
      position relative
      .center
        position relative
        bottom -2px
        z-index 1
      img.img
        position absolute
        &.left1
          top 160px
          left 50%
          margin-left -550px
          z-index 2
        &.left2
          top 247px
          left 50%
          margin-left -543px
          z-index 2
        &.right1
          top 400px
          right 50%
          margin-right -570px
          z-index 2
        &.right2
          top 450px
          right 50%
          margin-right -430px
          z-index 2
    &.rank
      position relative
      img.center1
        position absolute
        left 50%
        margin-left -294px
        top 160px
    &.question
      img.img
        width 20%
        &.center
          position relative
          bottom -2px
          z-index 1
        &.left
          position relative
          bottom 100px
          right 30px
          z-index 2
        &.right
          position relative
          bottom 100px
          left 30px
          z-index 2