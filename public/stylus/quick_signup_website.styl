@require variables
@require tools

quickSignupWebsitePage_col_blue = #3ca2e0
quickSignupWebsitePage_col_orange = #f48361
quickSignupWebsitePage_col_gray = #a1a1a1

.quick_signup_website_page
  width 75%
  margin 36px auto

  //- 取自bootstrap 3.3.4
  .form-group-lg .form-control {
    height: 46px;
    padding: 10px 16px;
    font-size: 18px;
    line-height: 1.3333333;
    border-radius: 6px;
  }
  .form-group-lg .form-control-static {
    height: 46px;
    padding: 10px 16px;
    font-size: 18px;
    line-height: 1.3333333;
  }
  @media (min-width: 768px) {
    .form-horizontal .form-group-lg .control-label {
      padding-top: 14.333333px;
    }
  }

  .debug_tools
    position absolute
    top 50px
  .register_box
    width 75%
    margin 0 auto 36px
    background-color #FFF
    border-radius 4px
    box-shadow 0 1px 0 rgba(0, 0, 0, 0.25)
    padding 4rem
    border 1px solid #E8E8E8
    min-height 300px
    h1
      font-size 36px
      line-height 45px
      letter-spacing -1px
      font-weight 700
      margin 0 0 18px
    .sub_text
      font-size 18px
      margin 0 0 18px
  .rg_title
    margin 0
    font-size 28px
    line-height 1
    color quickSignupWebsitePage_col_blue
  .rg_description
    margin-top 40px
    font-size 16px
    line-height 1
  .rg_link
    cursor pointer
    color quickSignupWebsitePage_col_blue
  .rg_form
    margin-top 40px
    width 400px
  .rg_form_group
    padding 5px 0
  .rg_form_control
    display block
    width 100%
    min-height 34px
    height auto
    padding 6px 5px
    font-size 12px
    line-height 1.42857143
    background-color #fff
    background-image none
    color #999
    border 0
    border-radius 2px 2px 0 0
    box-shadow 0 -1px 1px #d9d9d9
  .rg_btn_block
    display block
    margin 0
    padding 0
    width 100%
    height 40px
    color #fff
    background-color quickSignupWebsitePage_col_blue
    border none
    line-height 40px
    position relative
    font-size 12px
    text-align center
    vertical-align middle
    cursor pointer
    &:disabled
      opacity 0.65

  .step_select
    .rg_res_com
      cursor pointer
      &:hover
        color white
        background-color quickSignupWebsitePage_col_blue
    .pager
      a
        color quickSignupWebsitePage_col_blue
    .rg_no_res_description
      margin-top 40px
      font-size 12px
      line-height 1
    .rg_no_res
      margin-bottom 0

  .step_personal
    .rg_link
      color quickSignupWebsitePage_col_blue
    .rg_tips
      float left
      width 34px
      text-align center
      font-size 14px
      line-height 34px
      .valid
        color quickSignupWebsitePage_col_blue
      .invalid
        color quickSignupWebsitePage_col_orange

  .step_company
    .rg_remind
      margin-top 15px
    .rg_remind_op
      margin-top 15px
      .rg_btn_block
        width 100px
        font-size 14px
        line-height 34px
        height 34px
      .rg_btn_first
        margin-right 10px
    .rg_select_group
      .rg_form_control
        float left
        width 124px
        height 34px
        padding 0
        margin-right 14px
        &:last-child
          margin-right 0
    .rg_next_group
      margin-top 40px

  .step_select_group
    .groups
      margin-top 40px
      margin-left 20px
    .group
      float left
      margin-right 20px
      margin-bottom 20px
      width 50px
      text-align center
      cursor pointer
      &.active
        .img_contain
          border 1px solid quickSignupWebsitePage_col_blue
          border-radius 100%
          box-shadow 0 1px 1px rgba(0,0,0,0.1)
    .img_contain
      width 50px
      height 50px
      background-image url('/img/signup/dl_signup_groups.png')
      background-repeat no-repeat
      background-size 240px 240px
      margin 0
      margin-bottom 14px
      padding 0px
    for i in 0..16
      .group_{i+1}
        background-position i%4 * -60px + 9px floor(i/4) * -60px + 8px
    .group_3
      background-position -111px 10px
    .group_5
      background-position 3px -52px
    .group_4
      background-position -177px 10px
    .group_6
      background-position -53px -52px
    .group_8
      background-position -168px -52px
    .group_9
      background-position 3px -108px
    .group_15
      background-position -113px -172px
    .shadow
      margin -10px auto 0px
      width 35px
      height 5px
      background #3788c7
      background-color #aaa
      border-radius 100%
      &.active
        background #46aaf5
        background-color gray
    .group_type
      margin-top 10px
      margin-bottom 0
    .rg_finish_btn
      width 100px
      margin 40px auto 0
      border-radius 5px

  .step_has_register
    .register_content
      text-align center
      margin-top 50px
      .operate
        display block
        margin-top 20px
        font-size 18px
        line-height 50px
        text-decoration none
        color quickSignupWebsitePage_col_orange
        transition(margin-left 0.5s)
        &:hover
          margin-left 6px
      .resend
        margin-left 30px
        cursor pointer

  .step_success
    .register_content
      margin-top 50px
      text-align center
      .go_to_email
        display block
        margin-top 20px
        font-size 18px
        line-height 50px
        text-decoration none
        color quickSignupWebsitePage_col_orange
        transition(margin-left 0.5s)
        &:hover
          margin-left 6px