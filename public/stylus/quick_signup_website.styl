@require variables

quickSignupWebsitePage_col_blue = #3ca2e0
quickSignupWebsitePage_col_orange = #f48361
quickSignupWebsitePage_col_gray = #a1a1a1

.quick_signup_website_page
  .register_box
    margin-top 95px
    border 2px solid quickSignupWebsitePage_col_blue
    border-radius 8px
    padding 40px
  .rg_title
    margin 0
    font-size 28px
    line-height 1
    color quickSignupWebsitePage_col_blue
  .rg_description
    margin-top 40px
    font-size 16px
    line-height 1
  .rg_link
    cursor pointer
    color quickSignupWebsitePage_col_orange
  .rg_form
    margin-top 40px
    width 400px
  .rg_form_group
    padding 5px 0
  .rg_form_control
    display block
    width 100%
    min-height 34px
    height auto
    padding 6px 5px
    font-size 12px
    line-height 1.42857143
    background-color #fff
    background-image none
    color #999
    border 0
    border-radius 2px 2px 0 0
    box-shadow 0 -1px 1px #d9d9d9
  .rg_btn_block
    display block
    margin 0
    padding 0
    width 100%
    height 40px
    color #fff
    background-color quickSignupWebsitePage_col_blue
    border none
    line-height 40px
    position relative
    font-size 12px
    text-align center
    vertical-align middle
    cursor pointer
    &:disabled
      opacity 0.65

  .step_search
    .rg_form
      position relative
    .rg_search_input
      border 1px solid quickSignupWebsitePage_col_blue
      border-radius 5px
    .rg_search_btn
      position absolute
      right 0
      top 4px
      color quickSignupWebsitePage_col_blue
      font-size 20px
      background-color transparent

  .step_select
    .rg_res_com_list
      margin-top 40px
      list-style none
      padding 0
    .rg_res_com
      display inline-block
      margin-right 10px
      margin-bottom 10px
      font-size 12px
      line-height 1
      border-radius 5px
      padding 8px 10px
      border 1px solid quickSignupWebsitePage_col_blue
      color quickSignupWebsitePage_col_blue
      background-color #fff
      cursor pointer
      &:hover
        color white
        background-color quickSignupWebsitePage_col_blue
    .rg_no_res_description
      margin-top 40px
      font-size 12px
      line-height 1
    .rg_no_res
      &:last-child
        margin-bottom 0
    .rg_pager
      margin 10px 0
    .rg_pre_page, .rg_next_page
      cursor pointer
      color quickSignupWebsitePage_col_blue

  .step_personal
    .rg_form_left
      display block
      float left
      margin 0
      padding-right 10px
      text-align right
      width 100px
      font-size 14px
      font-weight normal
      line-height 34px
      min-height 1px
      color quickSignupWebsitePage_col_gray
    .rg_error
      .rg_form_left
        color #a94442
      .rg_form_control
        border 1px solid pink
    .rg_form_right
      display block
      float left
      width 300px
    .rg_form_right_text
      font-size 14px
      line-height 34px
    .rg_access_text
      margin-top 5px
    .rg_link
      color quickSignupWebsitePage_col_blue
    .rg_tips
      float left
      width 34px
      text-align center
      font-size 14px
      line-height 34px
      .valid
        color quickSignupWebsitePage_col_blue
      .invalid
        color quickSignupWebsitePage_col_orange

  .step_company
    .rg_remind
      margin-top 15px
    .rg_remind_op
      margin-top 15px
      .rg_btn_block
        width 100px
        font-size 14px
        line-height 34px
        height 34px
      .rg_btn_first
        margin-right 10px
    .rg_select_group
      .rg_form_control
        float left
        width 124px
        height 34px
        padding 0
        margin-right 14px
        &:last-child
          margin-right 0
    .rg_next_group
      margin-top 40px
