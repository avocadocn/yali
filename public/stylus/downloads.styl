.app_download_pc
  width 400px
  margin 70px auto
  .barcode_container
    width 260px
    margin auto
    border-radius 5px
    background-color #f4f4f4
    border 1px solid #000
    padding 5px
    box-shadow 1px 1px 3px rgba(1,1,1,.5)
    .barcode
      border-radius 5px
      width 250px
      height 250px
  .tips
    width 100%
    .tip
      width 100%
      text-align center
      font-size 24px
      margin 20px 0
      line-height 1
  .links
    .iphone_download ,.android_download
      background-image url('/img/app_links.png')
      width 174px
      height 51px
      border-radius 7px
      box-shadow 1px 1px 2px rgba(1,1,1,.5)
    .iphone_download
      float left
    .android_download
      float right
      background-position -196px 0
      border-radius 5px