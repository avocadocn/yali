body
  margin 0
  background-color #232637
  overflow-x hidden
@-webkit-keyframes spinner 
  0% 
    -webkit-transform rotate(0deg)
    transform rotate(0deg)
  100% 
    -webkit-transform rotate(360deg)
    transform rotate(360deg)
@keyframes spinner
  0%
    -webkit-transform rotate(0deg);
    transform rotate(0deg)
  100%
    -o-transform rotate(360deg)
    transform rotate(360deg)
