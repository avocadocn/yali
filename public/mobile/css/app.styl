
// global variables

themeColor = #3abde8




// common style or css tools

.table_wrap
  display table
  width 100%
  height 100%

.table_cell
  display table-cell

.col-30
  -webkit-flex 0 0 30%
  -moz-box-flex 0
  -moz-flex 0 0 30%
  -ms-flex 0 0 30%
  flex 0 0 30%
  max-width 30%

.col-40
  -webkit-flex 0 0 40%
  -moz-box-flex 0
  -moz-flex 0 0 40%
  -ms-flex 0 0 40%
  flex 0 0 40%
  max-width 40%


// login page

loginButtonBgcolor = #ea6060
loginInfoBgcolor = #75d1ef

.login_wrap
  background-color themeColor

  .scroll
    height 100%

.login_head
  height 179px

  .table_cell
    width 100%
    height 100%
    text-align center
    vertical-align middle

  .logo
    width 140px



.login_body
  height 221px

.login_modal
  position relative
  padding-top 5px
  padding-left 10px
  padding-right 10px
  background-color white
  border 5px solid loginInfoBgcolor
  border-bottom none

.login_line
  margin 10px

  input
    margin-left 10px
    height 17px
    color #bbb

  button
    padding-top 0
    min-height 0
    height 30px
    font-size 14px
    line-height 30px

.login_button
  border none
  color white
  background-color loginButtonBgcolor

  &:hover
    color white
    background-color #e57272

.login_forget
  text-align center
  font-size 12px

  span
    color pink

  a
    color #aaa

.login_info
  position absolute
  left 0
  bottom 0
  margin-bottom 0
  width 100%
  height 35px
  text-align center
  line-height 35px
  font-size 12px
  color white
  background-color loginInfoBgcolor












// campaign page

campaignContentBgcolor = #a3cbe2
campaignContentRadialColor = #cfe0eb

campaignBgcolor = #e9f4fe
campaignLinearColor = #cfe9f9

operateBarBgcolor = #3abde8

campaignLineHeight = 45px


.campaign
  background-color campaignContentBgcolor
  /* Firefox 3.6+ */
  background -moz-linear-gradient(left, campaignBgcolor, campaignLinearColor 5%, campaignBgcolor, campaignLinearColor 95%, campaignBgcolor)
  /* Safari 4-5, Chrome 1-9 */
  background -webkit-gradient(linear, left top, right top, from(campaignBgcolor), color-stop(0.05, campaignLinearColor), color-stop(0.5, campaignBgcolor), color-stop(0.95, campaignLinearColor), to(campaignBgcolor))
  /* Safari 5.1+, Chrome 10+ */
  background -webkit-linear-gradient(left, campaignBgcolor, campaignLinearColor 5%, campaignBgcolor, campaignLinearColor 95%, campaignBgcolor)
  /* Opera 11.10+ */
  background -o-linear-gradient(left, campaignBgcolor, campaignLinearColor 5%, campaignBgcolor, campaignLinearColor 95%, campaignBgcolor)

.campaign_item
  background-color transparent
  .item-content
    padding 0
    background-color transparent

.campaign_line
  margin-top 0 !important
  padding 0 10px
  height campaignLineHeight

.campaign_team_info
  padding 5px 0
  line-height campaignLineHeight - 10px
  color #3abde8 !important

.campaign_group_logo
  width 35px
  height 35px
  vertical-align middle
  border 1.5px solid white
  border-radius 5px

.campaign_content
  background-color campaignContentBgcolor
  /* Firefox 3.6+ */
  /* -moz-radial-gradient( [ || ,]? [ || ,]? , [, ]* ) */
  background -moz-radial-gradient(circle, campaignContentRadialColor, campaignContentBgcolor)
  /* Safari 4-5, Chrome 1-9 */
  background -webkit-gradient(radial, center center, 0, center center, 460, from(campaignContentRadialColor), to(campaignContentBgcolor))
  /* Safari 5.1+, Chrome 10+ */
  background -webkit-radial-gradient(circle, campaignContentRadialColor, campaignContentBgcolor)

  p
    line-height campaignLineHeight

.campaign_operate_bar
  background-color operateBarBgcolor

.campaign_operate_button_container
  padding 5px

.campaign_operate_text
  line-height 45px
  color white !important

.campaign_operate_button
  min-height 0
  width 100%
  height 35px
  line-height 35px
  font-size 14px
  border none
  border-radius 5px
  color white
  background-color #ff7f66










