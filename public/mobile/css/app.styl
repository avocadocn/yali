
// variables

themeColor = #3abde8

loginButtonBgcolor = #ea6060
loginInfoBgcolor = #75d1ef


// common style or css tools

.table_wrap
  display table
  width 100%
  height 100%

.table_cell
  display table-cell


// login page

.login_wrap
  background-color themeColor

  .scroll
    height 100%

.login_head
  height 32.5%

  .table_cell
    width 100%
    height 100%
    text-align center
    vertical-align middle

  .logo
    height 20%



.login_body
  height 37.5%

  .login_modal
    padding-top 2%
    padding-left 5%
    padding-right 5%
    background-color white
    border 5px solid loginInfoBgcolor

  .login_button
    border none
    color white
    background-color loginButtonBgcolor

  .login_info
    text-align center
    color white
    background-color loginInfoBgcolor





