
// variables

themeColor = #3abde8

loginButtonBgcolor = #ea6060
loginInfoBgcolor = #75d1ef


// common style or css tools

.table_wrap
  display table
  width 100%
  height 100%

.table_cell
  display table-cell


// login page

.login_wrap
  background-color themeColor

  .scroll
    height 100%

.login_head
  height 179px

  .table_cell
    width 100%
    height 100%
    text-align center
    vertical-align middle

  .logo
    width 140px



.login_body
  height 221px

  .login_modal
    position relative
    padding-top 5px
    padding-left 10px
    padding-right 10px
    background-color white
    border 5px solid loginInfoBgcolor
    border-bottom none

    .login_line
      margin 10px

      input
        margin-left 10px
        height 17px
        color #bbb

      button
        padding-top 0
        min-height 0
        height 30px
        font-size 14px
        line-height 30px

    .login_button
      border none
      color white
      background-color loginButtonBgcolor

    .login_forget
      text-align center
      font-size 12px

      span
        color pink

      a
        color #aaa

    .login_info
      position absolute
      left 0
      bottom 0
      margin-bottom 0
      width 100%
      height 35px
      text-align center
      line-height 35px
      font-size 12px
      color white
      background-color loginInfoBgcolor





