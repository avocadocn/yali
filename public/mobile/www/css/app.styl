
// global variables

themeColor = #3abde8




// common style or css tools


body
  background-color themeColor


.table_wrap
  display table
  width 100%
  height 100%

.table_cell
  display table-cell
  width 100%
  height 100%
  text-align center
  vertical-align middle

.col-30
  -webkit-flex 0 0 30%
  -moz-box-flex 0
  -moz-flex 0 0 30%
  -ms-flex 0 0 30%
  flex 0 0 30%
  max-width 30%

.col-40
  -webkit-flex 0 0 40%
  -moz-box-flex 0
  -moz-flex 0 0 40%
  -ms-flex 0 0 40%
  flex 0 0 40%
  max-width 40%











// menu

oddItemBgcolor = #35add5
evenItemBgcolor = #37b4dd


.menu_wrap
  background-color themeColor

  .has-header
    overflow visible

  .menu_header
    background-color themeColor
    z-index 0
    border-bottom none

.menu_bar
  background-color themeColor !important
  border none !important
  color white !important

  .button
    color white !important
  .title
    color white !important

.menu_logo
  margin-left auto
  margin-right auto
  margin-top 3px
  width 75px
  height 20px

.menu_personal_info
  color white

.menu_photo
  display block
  margin-left auto
  margin-right auto
  margin-top -10px
  border 2px solid white
  border-radius 5px

.menu_nickname
  margin-top 10px
  margin-bottom 10px
  font-size 24px
  text-align center


.menu_list .list
  .item
    color white
    border none

    &:nth-child(2n+1)
      background-color oddItemBgcolor
      a
        background-color oddItemBgcolor

    &:nth-child(2n+2)
      background-color evenItemBgcolor
      a
        background-color evenItemBgcolor















