html
  head
    meta(charset="utf-8")
    title warm注册
    meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")
    meta(name="viewport" content="width=device-width, initial-scale=1, user-scalable=no")
    link(rel="stylesheet" href="/css/signup.min.css")
    link(href="/img/icons/favicon.ico" rel="shortcut icon" type="image/x-icon")
  body(ng-app="donler")
    header
      ul.nav
        li
          a(href="#") 首页
        li
          a(href="/about.html") 关于warm
    section.mobileSignup(ng-controller="userSignupController")
      .search_company(ng-show="step===1" ng-cloak)
        .step 迈出warm第一步
        input.search_input(type="text" ng-model="keyword" placeholder="搜索学校" ng-keypress="search($event)")
        .nearby 在warm择校吧
        .companies
          .no_companies(ng-if="showCompanies &&companies.length === 0") 贵校暂未收录，敬请期待.
          a.company(ng-repeat="company in companies" ng-click="select(company)" ng-cloak)
            span.company_name {{company.name}}
      .profile(ng-show="step===2" ng-cloak)
        .compnay
          img.company_logo(ng-src="company.logo")
          form(name="userForm")
            input.user_input(ng-model="user.name" placeholder="姓名" required)
            input.password(type="password" ng-model="user.password" placeholder="密码(至少6位)" ng-minlength=6)
            input.enrollment(type="number" ng-model="user.enrollment" placeholder="入学年份(如:2015)" ng-minlength=4)
            button.mext_step(ng-disabled="userForm.$invalid" ng-click="goto(3)") 注册

      .phone(ng-show="step===3" ng-cloak)
        .step 只差最后一步就能进入warm世界啦!
        form(name="phoneForm")
          input.phone(name="phone" ng-model="user.phone" placeholder="手机验证" required ng-minlength=11)
          button.validate(ng-disabled="phoneForm.phone.$invalid" ng-click="validatePhone()") 短信验证
          p.tip(ng-if="tip" ng-cloak) {{tip}}
          input.verification(placeholder="验证码" ng-model="verification" required)
          button.register(ng-click="register()") 完成注册
    footer
    script(src="/lib/angular/angular.min.js")
    script(src='/js/controllers/signupController.js')
