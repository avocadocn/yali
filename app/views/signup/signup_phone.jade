html
  head
    meta(charset="utf-8")
    title warm注册
    meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")
    meta(name="viewport" content="width=device-width, initial-scale=1, user-scalable=no minimum-scale=1")
    link(rel="stylesheet" href="/css/signup.min.css")
    link(href="/img/icons/favicon.ico" rel="shortcut icon" type="image/x-icon")
  body.mobile_signup(ng-app="donler")
    section.singup(ng-controller="userSignupController")
      //- 5个球
      //- .balls
      .ball.ball_1
      .ball.ball_2
      .ball.ball_3
      .ball.ball_4
      .ball.ball_5
      //-资料框
      form(name="userForm")
        .fill_in
          img.fill_in_title(ng-src="/img/signup/fill_in_title.png")
          .select_container
            select(ng-options="company as company.name for company in companies" ng-change="selectCompany()" ng-model="company")
              option.option_place(value='' ng-disabled selected) 请选择你的大学
          .select_container
            select(ng-options="year for year in years" ng-model="user.enrollment")
              option.option_place(value='' ng-disabled selected) 请选择入学时间
          input.phone(name="phone" ng-model="user.phone" placeholder="请输入你的手机号" required ng-minlength=11)
          p.tip(ng-if="tip" ng-cloak) {{tip}}
          .validate
            input.verification(placeholder="输入验证码" ng-model="user.code" required)
            button.get_validate(type="button" ng-disabled="userForm.phone.$invalid || countDown>0" ng-click="validatePhone()" ng-cloak) 获取验证码{{countDown}}
          input.user_input(ng-model="user.name" placeholder="请输入姓名" required)
          input.password(type="password" ng-model="user.password" placeholder="请设置密码(至少6位)" ng-minlength=6)
          p.tip(ng-if="errorMSg" ng-cloak) {{errorMSg}}
        button.submit(ng-click="register()" ng-disabled="userForm.$invalid || !validated")
    footer
    script(src="/lib/angular/angular.min.js")
    script(src='/js/controllers/signupController.js')
