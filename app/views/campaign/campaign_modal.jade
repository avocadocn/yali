form(name="campaign_form" novalidate)
  .dl_modal_body.clearfix
    .dl_modal_sponsor.unit.clearfix(ng-if="!dOtMulti&&sponsorTeam")
      img.logo(ng-src="{{sponsorTeam.logo}}")
      span.text 活动发起方:
      span.tname {{sponsorTeam.name}}
      button.button(type="button" ng-click="provoke_select(1)") 更改小队
    .dl_modal_sponsor(ng-if="dOtMulti")
      span.dl_modal_subtitle 参加该活动的小队
      .groups.dl_row.groups_box
        .group(ng-repeat='select_dOt in select_dOts')
          img.size_48(ng-src="{{select_dOt.logo}}" title="{{select_dOt.name}}")
    .dl_modal_content.clearfix
      .dl_modal_container
        input.dl_modal_input.dl-form-control(type="text" name="theme" ng-model="theme" placeholder="输入活动主题，限定14字" maxlength=20 required)
      .dl_modal_container
        .input-group
          .input-group-btn
            input.dl_modal_input.dl-form-control.dl_modal_input_container(type="text" name="mold" ng-model="mold" data-toggle="dropdown" readonly required)
            button.input-group-addon.no_radius(type='button' data-toggle="dropdown")
              i.fa.fa-angle-down
            ul.dropdown-menu.dropdown-menu-right.no_radius(role="menu")
              li(ng-repeat="select_mold in molds")
                a(ng-click="selectMold(select_mold.name)") {{select_mold.name}}
      .dl_modal_container
        .dl_modal_half_container
          .input-group.date.form_datetime#start_time
            input.dl-form-control.dl_modal_input(type="text" ng-model="start_time" name="startTime" placeholder="选择活动开始时间" data-data-format="YYYY-MM-DD HH:mm" readonly required)
            span.input-group-addon.no_radius
              span.glyphicon.glyphicon-calendar
        .dl_modal_half_container.end_time(ng-class="{'has-error':start_time >= end_time}")
          .input-group.date.form_datetime#end_time
            input.dl-form-control.dl_modal_input(type="text" ng-model="$parent.end_time" name="endTime" placeholder="选择活动结束时间" data-data-format="YYYY-MM-DD HH:mm" readonly required)
            span.input-group-addon.no_radius
              span.glyphicon.glyphicon-calendar
      .dl_modal_container
        .dl_modal_input_container
          input.dl_modal_input.dl-form-control(type="text" name="location" ng-model="location.name" placeholder="请输入活动场地的详细地址，并点击后方图标标注" maxlength=40 required)
        .dl_modal_button
          button.dl_map_btn(type='button' ng-click="showMap()")
            i.fa.fa-map-marker
      .dl_modal_container.dl_modal_map_container(ng-show="showMapFlag")
        #mapDetail.map_height
  .dl_modal_footer
    button.dl_btn.dl_modal_btn(type='button' ng-click='pressed=true;sponsor()' data-dismiss="modal" ng-disabled="campaign_form.$invalid||pressed") #{__("IMMEDIATE")}#{__("SPONSOR")}
script.
  $(function() {
    $('#start_time').datetimepicker({
      autoclose: true,
      language: 'zh-CN',
      startDate: new Date(),
      pickerPosition:"bottom-left"
    });
    $('#end_time').datetimepicker({
      autoclose: true,
      language: 'zh-CN',
      startDate: new Date(),
      pickerPosition:"bottom-left"
    });
  });
