.container(ng-controller="DetailController")
  h1 企业注册
  p 恭喜您已通过验证，
  p 现在就完成注册，加入动梨吧~
  form(name="createForm")
    .form-group
      label(for="official_name") *官方简称：
      input.form-control#official_name(type="text" name="official_name" ng-model="detail.official_name" mix-maxlength="20" ng-pattern="/^[0-9a-zA-Z\u4e00-\u9fa5]*$/" ng-blur="detail.officialNameCheck()" placeholder="请参考企业名称/品牌名称" required)
      p(ng-if="!detail.check_name") {{detail.check_name_value}}
      p(ng-if="createForm.official_name.$error.mixlength") 请输入在20个英文字符或10个中文字符以内的名称
      p(ng-if="createForm.official_name.$error.pattern") 企业官方名称只能包含中文、英文、数字
    .form-group
      label(for="username") *用户名：
      input.form-control#username(type="text" name="username" ng-model="detail.username" placeholder="公司登录时的账号" ng-blur="detail.usernameCheck()" ng-minlength=4 tooltip-placement="right" tooltip="{{createForm.username.$invalid && createForm.username.$dirty ? '请使用4-20位英文和数字组合及“_”' : ''}}" required)
      p(ng-if="!detail.check_username") {{detail.check_username_value}}
    .form-group
      label(for="industry") *行业：
      select.form-control(type="text" ng-options="industry.name for industry in industries" ng-model="parent_industry" ng-change="changeIndustry()")
    .form-group
      select.form-control(type="text" ng-options="industry.name for industry in parent_industry.child_industry" ng-model="child_industry")
    .form-group
      label(for="password") *密码：
      input.form-control#password(type="password" name="password" ng-model="detail.password" ng-minlength=6  tooltip-placement="right" tooltip="{{createForm.password.$invalid && createForm.password.$dirty ? '密码不得少于6位' : ''}}" required)
    .form-group
      label(for="confirmPassword") *密码确认：
      input.form-control#confirmPassword(type="password" name="confirmPassword" ng-model="detail.confirmPassword" ng-minlength=6 match="detail.password" required)
    .form-group
      button.btn.btn-default(ng-disabled="createForm.$invalid || !detail.check_name || !detail.check_username" ng-click="detail.create_detail()") 创建公司账号
