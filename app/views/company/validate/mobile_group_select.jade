.group_select
  .text-center.h3.group_head='请选择' + group_head + '兴趣小队组件'
    div.select_div
      .groups.row
        .group.col-xs-4.col-sm-3.col-md-2(ng-repeat='group in groupModel.groups' ng-class="{'1': 'active', '0': 'inactive'}[group.select]")
          input(type='checkbox' name='group' id='{{group._id}}' value='{{group.type}}' ng-model='group.select' ng-true-value='1' ng-false-value='0')
          label.size_90.img_contain(class='group_'+'{{group._id}}' for='{{group._id}}')
    .group_next
      button.next.btn.btn-primary.btn-lg.center-block(ng-click='groupModel.group_next()') 下一步