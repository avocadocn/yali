extends ../../layouts/base

block content
  .header
    img.logo(src="/img/dl_logol.png")
  .active_error_phone(ng-controller="activeFailController")
    if isFail === false
      .clearfix
        i.fa.fa-check.error_icon.pull-left
        span.error_title.pull-left 激活成功
    else
      .clearfix
        i.fa.fa-close.error_icon.pull-left
        span.error_title.pull-left 激活失败
    .active_error_divider
    if message
      .active_error_msg= message
    if isNeedRegister
      .active_error_msg
        | 您还没有注册，快来
        a(href="/company/signup") 注册
        | 吧。
    if isOnlyCompanySuccess
      .active_error_msg
        | 公司账号激活成功，您现在可以
        a(href="/company/signup") 注册个人账号
        | 。
    if isInviteKeyInvalid
      .active_error_msg
        | 验证码不正确，请
        a(ng-click="resend()") 重新收取激活信。
      input#resend_email(type="hidden" value="#{resendEmail}")
      .active_error_msg(ng-if="isFinishResend") 已重新发送激活邮件
      .active_error_msg.text-danger(ng-if="resendErrorMsg" ng-bind="resendErrorMsg")

block footExt
  script(src="/js/controllers/companySignUp.js")
