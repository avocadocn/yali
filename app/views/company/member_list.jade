.loading_div(ng-show = 'loading')
.dl_compaign_member(ng-show = '!loading')
  .operator_head.clearfix
    span.subtitle.pull-left 成员一览
    if global_user.provider === 'company'
      a.pull-right(href="#/manager") 返回
  .memberlist(ng-init="show=[];")
    .row.departmentbox(ng-repeat="department in members_by_department track by $index" ng-init="show[$parent.$index]=false")
      span {{department.name}}{{department.id}}
      .text_container.pull-right(ng-if="department.member.length>10")
          a.text(ng-show="!show[$index]" ng-click="show[$index]=true;" href="javascript:void(0);" ng-cloak) 更多 > 
          a.text(ng-show='show[$index]' ng-click="show[$index]=false;" href="javascript:void(0);" ng-cloak) 收起 <
      .groups
        .member(ng-repeat="member in department.member track by $index")
          div.member_group(ng-if='member.active' ng-show="$index<10||show[$parent.$parent.$index]")
            if role != 'GUESTHR' && role !='GUEST'
              .dl_row.img(bs-popover)
                a(ng-click="userDetail(member._id)" data-toggle="modal" data-target="#sponsorUserDetailModal")
                  img.size_48.img_user(ng-src="{{member.photo}}" ng-Mouseenter="showUserCard(member._id,member._id)" id='pop{{member._id}}')
              .dl_row.text.member_row
                a.user_name(href="/users/home/{{member._id}}") {{member.nickname}}
            else
              .dl_row.img
                img.size_48.img_user(ng-src="{{member.photo}}")
              //- .dl_row.member_row
                label.user_name {{member.nickname}
    //-if role ==='HR'
      .row.departmentbox.nodepartmentbox
        span.subtitle 未激活成员
        .groups
          .member(ng-repeat="member in members track by $index")
            div.member_group(ng-if='!member.active')
              .dl_row.img
                a(ng-click="userDetail(member._id)" data-toggle="modal" data-target="#UnregUserModal")
                  img.size_48.img_user(ng-src="{{member.photo}}")
              .dl_row.text.member_row
                span.user_name {{member.email}}

  if role === 'HR'
    .modal.fade(id="sponsorUserDetailModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true")
      include user_detail_modal
