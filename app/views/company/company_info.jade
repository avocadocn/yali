.loading_div(ng-show = 'loading')
div.company-info(ng-show = '!loading')
  .dl_row
    h5.pull-left #{__("ACCOUNT")}
  form.form-horizontal(name="accountForm")
    hr.margin_top_6
    .dl_row.clearfix
      .info_side
        span.info_label #{__("LOGIN_EMAIL")}
      .info_side
        span.info_label(ng-bind="company.login_email")
      .info_side(ng-if ="role == 'HR'")
        a(href="#/changePassword/#{global_user._id}") #{__("CHANGE")}#{__("PASSWORD")}
    .dl_row.clearfix
      .info_side
        span.info_label #{__("REGISTER_DATE")}
      .info_side
        span.info_label {{company.register_date | date:'yyyy-MM-dd HH:mm:ss'}}
    .dl_row.clearfix(ng-if="role == 'HR'")
      .info_side
        span.info_label #{__("INVATE_LINK")}
      .info_detail.col-md-9
        .row.col-md-5
          button.dl_btn.dl_btn_small.col-md-5(ng-click="inviteUrlToggle()" ng-bind="inviteUrlStatus ? '隐藏':'显示'")
        .row.col-md-12
          p
          textarea.info_label.dl_word_break.col-md-12.invite-link(ng-if="inviteUrlStatus",disabled) {{company.inviteUrl}}
          p
  form.form-horizontal(name="infoForm")
    .dl_row.clearfix
      h5.pull-left #{__("ENTERPRISE_INFO")}
      button.dl_btn.dl_btn_small.pull-right(ng-if="role =='HR'" ng-click="infoEditToggle()" ng-bind="infoButtonStatus" ng-disabled="!infoUnEdit&&infoForm.$invalid")
    hr.margin_top_6
    .dl_row.clearfix
      .info_side
        span.info_label #{__("OFFICIAL_NAME")}
      .info_detail
        input.dl_input.editToggle.dl_form-Control(type="text" name ="username" ng-model="info.official_name" ng-disabled="true")
      .info_side(ng-if="role =='HR'")
        a.clearLinkUnderline.dl_btn.dl_btn_small.pull-right(href="/company/editLogo/#{global_user._id}") #{__("CHANGE_LOGO")}
    .dl_row.clearfix
      .info_side
        span.info_label #{__("ENTERPRISE_FULL_NAME")}
      .info_detail
        input.dl_input.editToggle.dl_form-Control(type="text" name ="infoname" ng-model="info.name" ng-disabled="true")
    .dl_row.clearfix#location(ng-show = "!infoUnEdit" data-src="/region" data-select="province city district" data-init="{{linkage_init_location.province}} {{linkage_init_location.city}} {{linkage_init_location.district}}")
      .info_side
        span.info_label #{__("LOCATION")}
      .info_detail(ng-show="!infoUnEdit")
        select.dl_input.editToggle.dl_form-Control.no_radius.height_34(type="text" name ="province" ng-disabled="infoUnEdit")
      .info_detail(ng-show="!infoUnEdit")
        select#select_city.dl_input.editToggle.dl_form-Control.no_radius.height_34(type="text" name ="city" ng-disabled="infoUnEdit")
      .info_detail(ng-show="!infoUnEdit")
        select#select_district.dl_input.editToggle.dl_form-Control.no_radius.height_34(type="text" name ="district" ng-disabled="infoUnEdit")
    .dl_row.clearfix
      .info_side
        span.info_label #{__("ADDRESS")}
      .info_detail_2(ng-if="infoUnEdit")
        span.info_label {{ info.city.province }} {{ info.city.city }} {{ info.city.district }}
      .info_detail_2
        input.dl_input.editToggle.dl_form-Control(ng-if="!infoUnEdit" type="text" name ="address" ng-maxlength=40 tooltip="{{infoForm.address.$invalid? '地址最长字数40字':''}}" tooltip-placement="right" ng-model="info.address" ng-disabled="infoUnEdit")
        span.info_label(ng-if="infoUnEdit") {{ info.address }}
    .dl_row.clearfix(ng-if="info.linkman!=undefined || !infoUnEdit")
      .info_side
        span.info_label #{__("LINK_MAN")}
      .info_detail
        input.dl_input.editToggle.dl_form-Control(type="text" name ="linkman" ng-model="info.linkman" ng-disabled="infoUnEdit" ng-maxlength=10 tooltip="{{infoForm.linkman.$invalid? '联系人最长字数10字':''}}" tooltip-placement="right")
    .dl_row.clearfix(ng-if="info.lindline!=undefined || !infoUnEdit")
      .info_side
        span.info_label #{__("ENTERPRISE_PHONE")}
      .info_detail_2(ng-if="infoUnEdit")
        span.info_label {{info.lindline.areacode}} - {{info.lindline.number}} {{info.lindline.extension ? ':'+info.lindline.extension:''}}
      .info_detail(ng-show="!infoUnEdit")
        input.dl_input.editToggle.dl_form-Control(type="text" name ="areacode" ng-model="info.lindline.areacode" ng-disabled="infoUnEdit" ng-maxlength=5)
      .info_detail(ng-show="!infoUnEdit")
        input.dl_input.editToggle.dl_form-Control(type="text" name ="number" ng-model="info.lindline.number" ng-disabled="infoUnEdit" ng-maxlength=10)
      .info_detail(ng-show="!infoUnEdit")
        input.dl_input.editToggle.dl_form-Control(type="text" name ="extension" ng-model="info.lindline.extension" ng-disabled="infoUnEdit" ng-maxlength=5)
    .dl_row.clearfix(ng-if="info.phone!='' || !infoUnEdit")
      .info_side
        span.info_label #{__("PHONE")}
      .info_detail_2(ng-if = "infoUnEdit")
        span.info_label {{info.phone}}
      .info_detail(ng-if = "!infoUnEdit")
        input.dl_input.editToggle.dl_form-Control(type="text" name ="phone" ng-model="info.phone" ng-disabled="infoUnEdit" ng-maxlength=15)
    .dl_row.clearfix(ng-if="info.email!=undefined || !infoUnEdit")
      .info_side
        span.info_label #{__("EMAIL")}
      .info_detail
        input.dl_input.editToggle.dl_form-Control(type="email" name ="email" ng-model="info.email" ng-disabled="infoUnEdit")
    .dl_row.clearfix(ng-if="info.brief!=undefined || !infoUnEdit")
      .info_side
        span.info_label #{__("BRIEF")}
      .info_detail
        textarea.dl_input.editToggle.dl_form-Control(cols="40" row="4" name ="brief" ng-model="info.brief" ng-disabled="infoUnEdit" ng-maxlength=70 tooltip="{{infoForm.brief.$invalid? '简介最长字数140字':''}}" tooltip-placement="right")

