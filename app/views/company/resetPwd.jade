extends ../layouts/default
append headExt
  link(rel="stylesheet" href="/css/reset_pwd.css")
block contentExt
  if(success === '1')
    .resetPassword.text-center
      h4.head.text-center 重置密码成功
      a.dl_reset.text-center(href="/company/signin") 立刻登陆
  else
    form.resetPassword.form-horizontal(name="resetPassword" action="/company/resetPassword" method="post")
        h4.head.text-center 请输入您的新密码
        .form-group
          .col-md-4.col-md-offset-4
            input.dl_form-Control(type="hidden" name="id" value="#{id}" required)
        .form-group
          .col-md-4.col-md-offset-4
            input.dl_form-Control(type="password" name="password" placeholder="新密码" ng-model="newpassword" required)
        .form-group
          .col-md-4.col-md-offset-4
            input.dl_form-Control(type="password" name="confirmPassword" placeholder="重复密码" ng-model="confirmpassword" match="newpassword" required)
        if err
          .form-group
            .col-md-4.col-md-offset-4
              label.dl_err= err
        .form-group
          .col-md-offset-5.col-md-2
            button.btn-block.btn.btn-primary(ng-disabled="resetPassword.$invalid" type="submit") 确认重置密码