extends ../layouts/manager

block panel
  .arena(ng-app='arena' ng-controller='arenaDetailController')
    h3 擂台详情
    .row
      .col-xs-8
        .row
          label.info_label 类型:
          label.info_label= arena.group_type
        .row
          label.info_label 地区:
          label.info_label=  arena.city.province + arena.city.city
        .row
          label.info_label 地点：
          label.info_label= arena.address
        .row
          label.info_label 擂主：
          label.info_label= arena.champion.cid ? arena.champion.tname :'无'
        if(arena.champion.provoke_status)
          .row
            label.info_label 擂主备战中
        else if(alert_flag)
          .row
            button.btn.dl_btn(data-toggle="modal" data-target="#addCampaignInfoModal") 填写挑战信息
        else if(champion_flag)
          .rowz
            button.btn.dl_btn(data-toggle="modal" data-target="#addCampaignInfoModal") 修改挑战信息
        else if(arena.champion.cid)
          if(arena.champion.active)
            .row
              button.btn.dl_btn(ng-click='challengeArena("#{arena.id}")') 攻擂
          else
            .row
              label.info_label 请等待擂主填写挑战信息
        else
          .row
            button.btn.dl_btn(ng-click='robArena("#{arena.id}")') 我要抢擂
        div(class="modal fade" id="addCampaignInfoModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true")
          .modal-dialog
            .modal-content
              .modal-headerz
                button(class="close" data-dismiss="modal" aria-hidden="true") X
                h4.modal-title#myModalLabel 填写可挑战信息
              .modal-body
                form.row(name="campaignInfoForm")
                  label 内容
                    input(type="text" class="form-control" name="content" ng-model="campaign_info.content" required)
                  label 赛制
                    input(type="text" class="form-control" name="competition_format" ng-model="campaign_info.competition_format" required)
                  label 备注
                    input(type="text" class="form-control" name="remark" ng-model="campaign_info.remark" required)
                  label 地点
                    input(type="text" class="form-control" name="location" ng-model="campaign_info.location.name" required)
                  label 人数
                    input(type="text" class="form-control" name="number" ng-model="campaign_info.number" required)
                  .row
                    .col-md-6
                      label 开始时间
                        .form-group
                          .control-label
                            i(class="fa fa-calendar")
                          .row
                            .col-md-6
                              input.form-control(type="text" ng-model="campaign_info.competition_date" name="date" date-format="yy/MM/dd" data-autoclose="1" placeholder="Date" bs-datepicker)
                            .col-md-6
                              input.form-control(type="text" ng-model="campaign_info.competition_date" name="time" data-autoclose="1" placeholder="Time" bs-timepicker)
                    .col-md-6
                      label 结束时间
                        .form-group
                          .control-label
                            i(class="fa fa-calendar")
                          .row
                            .col-md-6
                              input.form-control(type="text" ng-model="campaign_info.deadline" name="date" date-format="yy/MM/dd" data-autoclose="1" placeholder="Date" bs-datepicker)
                            .col-md-6
                              input.form-control(type="text" ng-model="campaign_info.deadline" name="time" data-autoclose="1" placeholder="Time" bs-timepicker)
                  .modal-footer
                    button(class="btn btn-default" data-dismiss="modal") 取消
                    button(class="btn btn-primary" ng-disabled='campaignDisabled' ng-click='addCampaignInfo("#{arena.id}")' data-dismiss="modal") 确定
    if(arena.champion.cid)
      .row
        h3 擂主信息
      .row
          img.size_80(src='#{arena.champion.logo ? arena.champion.logo:"/img/icons/default_group_logo.png"}')
          .row
            label.info_label 公司名称：
            label.info_label= arena.champion.cname
          .row
            label.info_label 队伍名称：
            label.info_label= arena.champion.tname
          .row
            label.info_label 队长名称：
            label.info_label= arena.champion.username
          .row
            label.info_label 上擂时间：
            label.info_label= moment(arena.champion.start_time).format("YYYY-MM-DD HH:mm")
          .row
            label.info_label 获胜次数：
            label.info_label= arena.champion.win_time ? arena.champion.win_time : 0
    hr
    if(arena.campaign_info.number || arena.campaign_info.location.name)
      .row
        h3 挑战信息
      .row
        .row
          label.info_label 地点：
          label.info_label= arena.campaign_info.location.name ? arena.campaign_info.location.name : ''
        .row
          label.info_label 时间：
          label.info_label= moment(arena.campaign_info.competition_date).format("YYYY-MM-DD HH:mm")
        .row
          label.info_label 截止时间：
          label.info_label= moment(arena.campaign_info.deadline).format("YYYY-MM-DD HH:mm")
          label.info_label 赛制：
          label.info_label= arena.campaign_info.competition_format ? arena.campaign_info.competition_format : ''
        .row
          label.info_label 人数：
          label.info_label= arena.campaign_info.number ? arena.campaign_info.number : ''
        .row
          label.info_label 备注：
          label.info_label= arena.campaign_info.remark ? arena.campaign_info.remark : ''
        if(challenger)
          .row
            label.info_label 挑战者公司：
            label.info_label= challenger.cname
          .row
            label.info_label 挑战者队伍：
            label.info_label= challenger.tname
    hr
    .row
      h3 历届擂主信息
    each champion in arena.history
      .row
        img.size_80(src='#{champion.logo ? champion.logo:"/img/icons/default_group_logo.png"}')
        .row
          label.info_label 公司名称：
          label.info_label= champion.cname
        .row
          label.info_label 队伍名称：
          label.info_label= champion.cname
        .row
          label.info_label 队长名称：
          label.info_label= champion.username
        .row
          label.info_label 上擂时间：
          label.info_label= moment(champion.start_time).format("YYYY-MM-DD HH:mm")
        .row
          label.info_label 获胜次数：
          label.info_label= champion.win_time ? champion.win_time : 0
append footExt
  script(src="/js/controllers/arena.js")