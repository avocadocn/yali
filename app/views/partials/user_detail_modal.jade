.modal-dialog
  .modal-content
    .modal-header
      button(type="button" class="close" data-dismiss="modal" aria-hidden="true") X
      h4.modal-title#myModalLabel #{__("STAFF")}#{__("INFO")}
    .modal-body
      .dl_row.clearfix
        .info_side
          span.info_label #{__("NICKNAME")}
        .info_detail
          input.dl_input.dl_form-Control.editToggle(type="text" name ="nickname" ng-model="members[num].nickname" ng-disabled="#{Global.role!='HR'}")
      .dl_row.clearfix
        .info_side
          span.info_label #{__("REALNAME")}
        .info_detail
          span.info_label {{members[num].realname}}
      .dl_row.clearfix
        .info_side
          span.info_label #{__("POSITION")}
        .info_detail
          input.dl_input.dl_form-Control.editToggle(type="text" name="position" ng-model="members[num].position" ng-disabled="#{Global.role!='HR'}")
      .dl_row.clearfix
        .info_side
          span.info_label #{__("DEPARTMENT")}
        .info_detail
          input.dl_input.dl_form-Control.editToggle(type="text" name="position" ng-model="members[num].department" ng-disabled="#{Global.role!='HR'}")
      .dl_row.clearfix
        .info_side
          span.info_label #{__("GENDER")}
        .info_side
          span.info_label {{members[num].sex}}
      .dl_row.clearfix
        .info_side
          span.info_label #{__("BIRTHDAY")}
        .info_side
          span.info_label {{members[num].birthday |date:'yyyy-MM-dd'}}
      .dl_row.clearfix
        .info_side
          span.info_label #{__("BLOODTYPE")}
        .info_side
          span.info_label {{members[num].bloodType}}
      .dl_row.clearfix
        .info_side
          span.info_label #{__("BRIEF")}
        .info_side
          span.info_label {{members[num].introduce}}
      .dl_row.clearfix
        .info_side
          span.info_label #{__("REGISTER_DATE")}
        .info_side
          span.info_label {{members[num].register_date | date:'yyyy-MM-dd HH:mm:ss'}}
