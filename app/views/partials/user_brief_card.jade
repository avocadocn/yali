.popover_img
  a(href="/users/home/#{user._id}")
    img.size_80(src="#{user.photo}")
.popover_content
  p: a(href="/users/home/#{user._id}")
    = user.nickname
    if (user.realname)
      | (#{user.realname})
  p 部门: #{user.department}
  if (user.phone)
    p 电话: #{user.phone}
  p Email: #{user.email}
.popover_brief
  if (user.introduce)
    p 简介: #{user.introduce}
  else
    p 简介: 这个人很懒啥都没留下-_-#
