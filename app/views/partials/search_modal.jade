.modal-dialog
  .dl-modal
    form(name="search_form")
      .dl-modal-header
        button(class="close" data-dismiss="modal" aria-hidden="true")
          img(ng-src='/img/icons/icon_close.png')
        .head#myModalLabel {{"SEARCH"|translate}}{{"COMPETITOR"|translate}}
      .dl-modal-body
        br
        .dl_modal_container
          .dl_row
            .dl_md_12
              input.dl_modal_input.form-control(type="text" ng-model="s_value" required)
            .dl_md_1
              button.clearLinkUnderline.dl_btn_right(ng-click="search()" ng-disabled="search_form.$invalid") 搜索
        .dl_modal_container
          .dl_row
            .dl_md_1
              input(type="radio" name="search_type" ng-model="search_type" value="company")
              a 按公司搜索
            .dl_md_1
              input(type="radio" name="search_type" ng-model="search_type" value="team")
              a 按小队搜索
        .dl_modal_container.margin_top_15
          .dl_row
            h4 搜索结果
        .dl_modal_container(ng-if="company_first")
          .dl_row
            .dl_md_1
              h5 公司
            .dl_md_12
              select.dl_modal_input.form-control(type="text" ng-model="company_selected" ng-options="company.name for company in companies" ng-change="getSelectTeam(company_selected._id)")
        .dl_modal_container(ng-if="team_find")
          .dl_row(style="height:93px" ng-repeat="team in teams")
            .dl_md_1
              img.size_80(ng-src="{{team.logo}}")
            .dl_md_10.margin_left_5
              .row.margin_left_15
                h5 {{team.name}}
              .row.margin_left_10
                .dl_md_3
                  h5 队员人数:{{team.member.length}}
                .dl_md_3
            .dl_md_1
              a.clearLinkUnderline.dl_btn_right(ng-click="provoke_select(team)") 挑衅
      br
      br
      .dl-modal-footer.margin_top_20
        button.dl_btn.dl_btn_large(data-dismiss="modal") {{"CANCEL"|translate}}