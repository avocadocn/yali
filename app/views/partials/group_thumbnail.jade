
mixin group_thumbnail(teams,team_class,team_head)
  h5= team_head
  .groups.row
    each team in teams
      div.center-block(class='group col-xs-3 '+team_class title="#{team.name}")
        a.center-block.margin_top_15(href="/group/home/#{team._id}")
          img.center-block(class='group size_50' src="#{team.logo}")
