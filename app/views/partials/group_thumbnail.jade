mixin group_thumbnail(teams,team_class,team_head,j)
  .row(ng-init="show=[];show[#{j}]=false;")
    span.subtitle.margin_top_20= team_head
    if (teams.length>4)
      .text_container.pull-right
        a.text(ng-show="!show[#{j}]" ng-click="show[#{j}]=true;" href="javascript:void(0);" ng-cloak) 更多 > 
        a.text(ng-show='show[#{j}]' ng-click="show[#{j}]=false;" href="javascript:void(0);" ng-cloak) 收起 <
   .groups.row.dl_row
    each team,i in teams
      div.center-block(ng-if="#{i}<4" class='group col-xs-3 '+team_class title="#{team.name}")
        a.center-block.margin_top_15(href="/group/home/#{team._id}")
          if team_class === 'leader'
            .img_div
              img.img.center-block.group.size_48(src="#{team.logo}")
              img.img
          else
            img.center-block.group.size_48(src="#{team.logo}")
      div.center-block.clearfix(ng-if="#{i}>=4" ng-show='show[#{j}]' class='group col-xs-3 '+team_class title="#{team.name}")
        a.center-block.margin_top_15(href="/group/home/#{team._id}")
          if team_class === 'leader'
            img.center-block.group.size_48(src="#{team.logo}")
          else
            img.center-block.group.size_48(src="#{team.logo}")