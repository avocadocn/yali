
.row.margin_top_15(ng-if="company")
  if (role!=='HR')
    .btn-group.pull-right
      button.btn.dl_btn.dropdown-toggle(data-toggle="dropdown") 活动类型
      ul.dropdown-menu(role="menu")
        li
          a(ng-click="selectCampaign(0)") 公司活动
        li
          a(ng-click="selectCampaign(1)") 已加入小队的活动
        li
          a(ng-click="selectCampaign(2)") 未加入小队的活动
.row.campaigns_list
  .margin_15(ng-repeat="campaign_item in campaigns")
    .row
      .col-xs-3.col-sm-2.col-md-3
        p.text-right {{ campaign_item.start_time | date:'yyyy-MM-dd HH:mm'}}
        p.text-right {{ campaign_item.start_time | date:'EEEE' }}
      .col-xs-6.col-sm-6.col-md-6.col-md-offset-1
        .row
          a.message_label(href="#") {{ campaign_item.content }}
          if (role==='HR'&&provider==='company' || role==='LEADER'&& provider ==='group')
            button.btn.close_btn(ng-click="cancel(campaign_item.id)") {{ campaign_item.active ? '&times;&nbsp;关闭':'打开'}}
        .row.margin_top_15
          span.message_label 类型: {{ campaign_item.gid[0] !== '0' ? campaign_item.group_type[0] : '公司活动' }}
          //- span.message_label 参加活动人数：{{ campaign_item.member_length }}
          span.message_label(ng-if="campaign_item.provoke.active") 赛制: {{ campaign_item.provoke.competition_format }}
          span.message_label 地点: {{ campaign_item.location }}
          span.message_label 截止时间: {{ campaign_item.end_time | date:'yyyy-MM-dd'}}
      .col-xs-3.col-sm-3.col-md-2
        if (role==='EMPLOYEE' || role==='OWNER' || role ==='LEADER' || role ==='MEMBER')
          div(ng-if="campaign_item.active")
            input.btn.dl_btn.dl_btn_small.margin_5(type = "button" value = "退出" ng-click="quit(campaign_item.id,$index)" ng-if="campaign_item.join")
            input.btn.dl_btn.dl_btn_small.margin_5(type = "button" value = "参加" ng-click="join(campaign_item.id,$index)" ng-if="!campaign_item.join")
        a.btn.dl_btn.dl_btn_small.margin_5(ng-if="campaign_item.provoke.active" ng-href="/group/competition/{{campaign_item.provoke.competition_id}}") 详情
        a.btn.dl_btn.dl_btn_small.margin_5(ng-if="!campaign_item.provoke.active" ng-href="/group/campaign/{{ campaign_item.id }}") 详情
    hr
