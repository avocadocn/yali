if provider=='company'
  .row
    .btn-group.pull-right
      button.dl_btn.dl_btn_small.dropdown-toggle(data-toggle="dropdown") {{campaign_type}}
      ul.dropdown-menu(role="menu")
        li
          a(ng-click="selectCampaign(0)") #{__("COMPANY_CAMPAIGN")}
        if (Global.role==='EMPLOYEE')
          li
            a(ng-click="selectCampaign(1)") #{__("SELECTED_TEAM")}
          li
            a(ng-click="selectCampaign(2)") #{__("UNSELECTED_TEAM")}
        else
          li
            a(ng-click="selectCampaign(3)") 小组活动
        li
          a(ng-click="selectCampaign(4)") 全部活动

table.table.table-hover.campaign_table
  tr(ng-repeat="campaign_item in campaigns")
    td.time_col
      p.text-right.day {{ campaign_item.start_time  | date:'yyyy-MM-dd HH:mm' | day }}
      p.text-right {{ campaign_item.start_time | date:'HH:mm' }}
    td.logo_col.text-center(bs-popover)
      a(ng-href="{{campaign_item.link}}")
        img.campaign_logo(ng-if="campaign_item.type==='teamcampaign'" ng-src="{{campaign_item.logo}}"  ng-Mouseover='showGroupCard(campaign_item.team_id,campaign_item._id)' id='pop{{campaign_item._id}}')
        img.campaign_logo(ng-if="campaign_item.type!=='teamcampaign'" ng-src="{{campaign_item.logo}}")
    td.content_col
      p 主题:
        a.theme_text(ng-href="/{{(campaign_item.type=='provoke'?'competition/':'campaign/detail/')+campaign_item._id}}") {{campaign_item.theme}}
      p 内容:
        span.content_text {{campaign_item.content}}
      p #{__("LOCATION")}:
        span.content_text {{campaign_item.location.name}}
    td.operator_col
      button.cancel_btn.dl_btn_small.operator_btn(ng-if="campaign_item.close_flag" ng-click="cancel(campaign_item._id)") 关闭活动

//-.campaigns_list(ng-repeat="campaign_item in campaigns" )
  .campaign_panel.clearfix
    .aside
      p.text-right {{ campaign_item.start_time  | date:'yyyy-MM-dd HH:mm' | day }}
      p.text-right {{ campaign_item.start_time | date:'HH:mm' }}
    .campaign_container
      .campaign_logo(bs-popover)
        a(ng-href="{{campaign_item.link}}")
          img.size_56.img_contain(ng-src="{{campaign_item.logo}}")
      .campaign_right
        .message_row
            span.message_label 主题:
              a(ng-href="/group/{{(campaign_item.type=='provoke'?'competition/':'campaign/')+campaign_item._id}}"){{campaign_item.theme}}
          .message_row
            span.message_label 内容: {{campaign_item.content}}
          .message_row
            span.message_label #{__("LOCATION")}: {{campaign_item.location.name}}

            span.message_label 开始#{__("TIME")}: {{campaign_item.start_time | date:'yyyy-MM-dd HH:mm'}}
            span.message_label(ng-if="campaign_item.member_max>0") 报名人数上限: {{campaign_item.member_max}}
          .message_row
            span.message_label 报名人数: {{campaign_item.member_num }}

            //-span.message_label 开始#{__("TIME")}: {{campaign_item.start_time | date:'yyyy-MM-dd HH:mm'}}
            //-span.message_label(ng-if="campaign_item.member_max>0") 报名人数上限: {{campaign_item.member_max}}
          //- .message_row
          //-   span.message_label 报名人数: {{campaign_item.member_num }}
          .message_row
            //-span(ng-if="campaign_item.join_flag==1 || campaign_item.join_flag==-1")
              btn.cancel_btn.dl_btn_small.operator_btn(ng-click="quit(campaign_item._id,$index)" ng-if="campaign_item.join_flag==1") #{__("QUIT")}
              btn.dl_btn.dl_btn_small.operator_btn(ng-click="join(campaign_item._id,$index)" ng-if="campaign_item.join_flag==-1") #{__("JOIN")}
            span(ng-if="campaign_item.close_flag")
              btn.cancel_btn.dl_btn_small.operator_btn(ng-click="cancel(campaign_item._id)") 关闭活动
  hr
.text-center(ng-if="campaigns.length>0")
  button(ng-if="loadMore_flag" ng-click="loadMore()") 加载更多
  span(ng-if="loadOver_flag") 已经加载了所有的活动
ul.pager
  li
    a(ng-if="lastPage_flag" ng-click="changePage(-1)") 上一页
  li
    a(ng-if="nextPage_flag" ng-click="changePage(1)") 下一页
