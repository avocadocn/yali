extends ../layouts/manager

append headExt
  link(rel="stylesheet" href="/css/photo_album.css")

block baseInfo
  .dl_container.clearfix
    .aside
      //-用户头像
      .size_80.img_contain.dl_head_font
        span.glyphicon.glyphicon-envelope
      //-人名
    .dl_row
      h1 站内信

block panel
  if (Global.role !=='GUESTHR' && Global.role !=='GUEST' && Global.role !=='GUESTLEADER')
    div
      if (Global.role !== 'HR')
        ul.nav.nav-tabs
          li.tab_style(ng-class="{'active':nowTab=='private'}")
            a.subtitle.no_radius(href="#/message_private" ng-click="addactive('private')") 私信({{private_length}})
          li.tab_style(ng-class="{'active':nowTab=='team'}")
            a.subtitle.no_radius(href="#/message_team" ng-click="addactive('team')") 小队消息({{team_length}})
          li.tab_style(ng-class="{'active':nowTab=='company'}")
            a.subtitle.no_radius(href="#/message_company" ng-click="addactive('company')") 全公司消息({{company_length}})
        .tab-content.margin_top_20
          .tab-pane.active
            div(ng-view)
      else
        .modal-dialog(ng-controller="messageCompanyController")
          .dl-modal
            form(name="message_form" novalidate)
              .dl-modal-header
                .head#myModalLabel 给您的成员发送私信
              .dl-modal-body
                .dl_modal_container
                  .dl_md_1.dl_vertical
                    label.subtitle 标题
                  .dl_md_10
                    input.dl_modal_input.form-control(type="text" name="cname" ng-model="private_message_caption.text")
                .dl_modal_container
                  .dl_md_1.dl_vertical
                    label.subtitle 内容
                  .dl_md_10
                    textarea.dl_modal_input.form-control(type="text" ng-model="private_message_content.text" placeholder="请控制在140字以内" maxlength=140 required)
              .dl-modal-footer
                button.dl_btn.dl_btn_large(data-dismiss="modal" ng-click="sendToAll()" ng-disabled="message_form.$invalid") 发送
block aside


append footExt
