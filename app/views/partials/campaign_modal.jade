.modal-dialog
  .dl-modal
    form(name="campaign_form")
      .dl-modal-header
        button.head(type="button" class="close" data-dismiss="modal" aria-hidden="true") X
        .head#myModalLabel {{"SPONSOR"|translate}}{{"CAMPAIGN"|translate}}
      .dl-modal-body
        .dl_modal_container
            label.subtitle {{"CAMPAIGN"|translate}}{{"THEME"|translate}}
            input.dl_modal_input(type="text" class="form-control" name="location" ng-model="location" required)
        .dl_modal_container
            label.subtitle {{"CAMPAIGN"|translate}}{{"BRIEF"|translate}}
            textarea.dl_modal_input.form-control(rows="4" name="content" ng-model="content" ng-change="judge()" required)
        .dl_modal_container
          .dl_modal_half_container
            .dl_modal_container
              label.subtitle {{"CAMPAIGN"|translate}}{{"START_TIME"|translate}}
            .dl_modal_quarter_container
              input.dl_modal_input.form-control(type="text" ng-model="start_time" name="date" date-format="yy/MM/dd" data-autoclose="0" data-min-date="today" data-max-date="{{end_time}}" placeholder="Date" bs-datepicker required)
            .dl_modal_quarter_container
              input.dl_modal_input.form-control(type="text" ng-model="start_time" name="time" data-autoclose="0" placeholder="Time" bs-timepicker required)
          .dl_modal_half_container
            .dl_modal_container
              label.subtitle {{"CAMPAIGN"|translate}}{{"END_TIME"|translate}}
            .dl_modal_quarter_container
              input.dl_modal_input.form-control(type="text" ng-model="end_time" name="date" date-format="yy/MM/dd" data-autoclose="0" data-min-date="{{start_time || 'today'}}" placeholder="Date" bs-datepicker required)
            .dl_modal_quarter_container
              input.dl_modal_input.form-control(type="text" ng-model="end_time" name="time" data-autoclose="0" placeholder="Time" bs-timepicker required)
        .dl_modal_container
          .dl_modal_container
            label.subtitle {{"LOCATION"|translate}}
          .dl_modal_map_container
            input.dl_modal_input(type="text" class="form-control" name="location" ng-model="location" required)
          .dl_modal_button_container
            button.map_btn {{"MAP"|translate}}
      .dl-modal-footer
        button.dl_btn.dl_btn_large(ng-click='sponsor()' data-dismiss="modal" ng-disabled="campaign_form.$invalid") {{"IMMEDIATE"|translate}}{{"SPONSOR"|translate}}
        button.cancel_btn.dl_btn_large(data-dismiss="modal" style="margin-left:30px") {{"CANCEL"|translate}}