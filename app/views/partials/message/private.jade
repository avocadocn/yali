hr
.dl_modal_container
  .dl_row(style="height:93px" ng-repeat="private_message in private_messages")
    .dl_message_head
      img.dl_message_head_size
    .dl_message_body.margin_left_5
      .row
        .dl_message_caption
          h7 {{private_message.caption}}
        .dl_message_date
          h7 {{private_message.date | date:'yyyy-MM-dd HH:mm'}}
      .row
        .dl_md_12(ng-switch="private_messages.message_type")
          h5(ng-switch-when="4")
            a(href="/competition/{{private_messages.campaign_id}}" ng-click="setToRead($index)")
              {{private_messages.content}}
          h5(ng-switch-when="5")
            a
              {{private_message.sender.nickname}} 给您发了
              a(id='pop_message_{{$index}}' ng-click="showPop($index)") 一条私信
          h5(ng-switch-when="6")
            您收到了一条
            a(id='pop_message_{{$index}}' ng-click="showPop($index)")
              系统消息
        .dl_md_1.pull-right.dl_message_rightcorner
          button.dl_btn.pull-right(ng-click="setToDelete($index)") X
          label.pull-right |
          button.dl_btn.pull-right(ng-click="setToRead($index)") {{statusHandle(private_message.status)}}