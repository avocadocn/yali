hr
.dl_modal_container
  .dl_row(style="height:93px" ng-repeat="company_message in company_messages")
    .dl_message_head
      img.dl_message_head_size
    .dl_message_body.margin_left_5
      .row
        .dl_message_caption
          h7 {{company_message.caption}}
        .dl_message_date
          h7 {{company_message.date | date:'yyyy-MM-dd HH:mm'}}
      .row
        .dl_md_12
          h5
            a(href="{{company_message.url}}" ng-click="setToRead($index)" ng-if="!company_message.direct_show"){{company_message.content}}
            a.pop(id="pop_message_{{$index}}" ng-click="setToRead($index)" data-toggle="popover" data-placement="top" data-content="{{company_message.detail}}" ng-if="company_message.direct_show"){{company_message.content}}
        .dl_md_1.pull-right.dl_message_rightcorner
          button.dl_btn.pull-right(ng-click="setToDelete($index)") X
          label.pull-right |
          button.dl_btn.pull-right(ng-disabled='true') {{statusHandle(company_message.status)}}