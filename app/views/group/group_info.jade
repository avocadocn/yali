fdiv(ng-controller="infoController")
  form.form-horizontal.tab-info-form(name="infoForm")
    .dl_row
      h5.pull-left #{__("INFO")}
      if (Global.role ==='HR' || Global.role === 'LEADER')
        button.dl_btn.dl_btn_small.pull-right(ng-click="editToggle()" ng-bind="buttonStatus")
    hr.margin_top_6
    .dl_row.clearfix
      .info_side
        span.info_label #{__("TEAM_NAME")}
      .info_detail
        input.dl_input.editToggle.dl_form-Control(type="text" name ="name" ng-model="name"  ng-disabled="unEdit")
    .dl_row.clearfix
      .info_side
        span.info_label #{__("COMPANY")}
      .info_detail
        span.info_label {{team.cname}}
    .dl_row.clearfix
      .info_side
        span.info_label #{__("SUM")}
      .info_detail
        span.info_label {{team.member.length}}
    .dl_row.clearfix
      .info_side
        span.info_label #{__("TEAM_LOGO")}
      .info_detail
        if (Global.role=== 'HR' || Global.role ==='LEADER')
          a.clearLinkUnderline.close_btn.dl_btn_small(href="/group/editLogo") #{__("CHANGE")}LOGO
    .dl_row.clearfix(ng-if="entity.home_court[0]!=undefined || !unEdit")
      .info_side
        span.info_label #{__("HOME_COURT")}
      .info_detail
        input.dl_input.editToggle.dl_form-Control(type="text" name ="home_court_1" ng-model="entity.home_court[0]" ng-disabled="unEdit")
    .dl_row.clearfix(ng-if="entity.home_court[1]!=undefined || !unEdit")
      .info_side
        span.info_label.col-md-2.control-label
      .info_detail
        input.dl_input.editToggle.dl_form-Control(type="text" name ="home_court_2" ng-model="entity.home_court[1]" ng-disabled="unEdit")
    .dl_row.clearfix(ng-if="team.brief!=undefined || !unEdit")
      .info_side
        span.info_label #{__("BRIEF")}
      .info_detail
        input.dl_input.editToggle.dl_form-Control(type="textarea" rows="10" name ="brief" ng-model="team.brief" ng-disabled="unEdit")
    .dl_row.clearfix
      .info_side
        span.info_label #{__("BUILD_TIME")}
      .info_detail
        span.info_label {{team.create_time | date:'yyyy-MM-dd HH:mm:ss'}}
    .dl_row.clearfix
      h5.pull-left 成员信息
    hr.margin_top_6

    .dl_row
      span.subtitle.margin_left_15 #{__("TEAM_LEADER")}
    .dl_row.clearfix
      .dl_companygroup_container
        .groups
          .group( ng-repeat="leader in team.leader")
            .dl_row(bs-popover)
              a(href="/users/home/{{leader._id}}" ng-Mouseover='showUserCard(leader._id,leader._id)' id='pop{{leader._id}}')
                img.size_56(ng-src="{{leader.photo}}")
            .dl_row
              label {{leader.nickname}}
    .dl_row.clearfix
      span.subtitle.margin_left_15 #{__("MEMBER")}
    .dl_row.clearfix
      .dl_companygroup_container
        .groups
          .group(ng-repeat="member in members")
            .dl_row(bs-popover)
              a(href="/users/home/{{member._id}}" ng-Mouseenter='showUserCard(member._id,member._id)' id='pop{{member._id}}' rel='popover')
                img.size_56(ng-src="{{member.photo}}")
            .dl_row
              label.user_name {{member.nickname}}

