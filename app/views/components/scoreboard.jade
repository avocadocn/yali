.component.score_board
  .component_head
    span.title 比分板
  .component_body
    .score_board_body
      .playing_team(ng-repeat="playingTeam in scoreBoard.playingTeams" class="playing_team_{{$index}}")
        img.team_logo(ng-src="{{playingTeam.logo}}/69/69" title="{{playingTeam.name}}")
        span.text.team_name(ng-bind="playingTeam.name" title="{{playingTeam.name}}")
        .show_score(ng-if="!editing && scoreBoard.status!==0" ng-class="{'active': playingTeam.result===1}")
          .score(ng-if="playingTeam.score || playingTeam.score===0" ng-bind="playingTeam.score")
          .result(ng-if="playingTeam.result===1") 胜
          .result(ng-if="playingTeam.result===0") 平
          .result(ng-if="playingTeam.result===-1") 败
        .editing(ng-if="editing")
          input.score(type="number" placeholder="{{playingTeam.score||'输入比分'}}" ng-model="scores[$index]")
          .results
            button.result(ng-click="setResult(1, $index)" ng-class="{'active': results[$index]===1}") 胜
            button.result(ng-click="setResult(0, $index)" ng-class="{'active': results[$index]===0}") 平
            button.result(ng-click="setResult(-1, $index)" ng-class="{'active': results[$index]===-1}") 负
      .vs vs
    .score_board_operator(ng-if="allowEdit && !editing && leaderStatus==='init'")
      button.operator(ng-click="toggleEdit()") 设置比分
    .score_board_operator(ng-if="allowEdit && !editing && leaderStatus==='toConfirm'")
      button.operator(ng-click="confirmScore()") 同意
      button.operator.cancel(ng-click="toggleEdit()") 不同意
    .score_board_operator(ng-if="allowEdit && !editing && leaderStatus==='waitConfirm'")
      button.operator(ng-click="toggleEdit()") 重新设置
    .score_board_operator(ng-if="allowEdit && editing")
      button.operator(ng-if="scoreBoard.status===0" ng-click="initScore()") 确认
      button.operator(ng-if="scoreBoard.status===1" ng-click="resetScore()") 确认
      button.operator.cancel(ng-click="toggleEdit()") 取消
    .score_board_footer
      .remind_text(ng-if="scoreBoard.status===0") 等待队长设置比分
      .remind_text(ng-if="scoreBoard.status===1") 比分待确认
      .remind_text(ng-if="scoreBoard.status===2") 比分已确认