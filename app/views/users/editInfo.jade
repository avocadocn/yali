div.use_edit_info
  form.form-horizontal(name="accountForm")
    .dl_row
      h5.pull-left {{"INFO" | translate}}
      if (Global.role!=='PARTNER')
        button.dl_btn.dl_btn_small.pull-right(ng-click="baseEditToggle()" ng-bind="baseButtonStatus")
    hr.margin_top_6
    .dl_row.clearfix
      .aside
        img.img-responsive.size_128.img-thumbnail(ng-src="{{user.photo ? user.photo :'/img/icons/default_user_photo.png'}}")
      if (Global.role!=='PARTNER')
        .dl_row.margin_top_15
          a.clearLinkUnderline.dl_btn.dl_btn_medium(href="/users/editPhoto"){{"CHANGE" | translate}}{{"AVATAR"|translate}}
        .dl_row.margin_top_15
          a(href="#/changePassword")
            button.dl_btn.dl_btn_medium {{"CHANGE" | translate}}{{"PASSWORD" | translate}}
    .dl_row.clearfix
      .info_side
        span.info_label {{"LOGIN_EMAIL" | translate}}
      .info_side
        span.info_label(ng-bind="user.email")
    .dl_row.clearfix(ng-if="user.nickname ||! baseUnEdit")
      .info_side
        span.info_label {{"NICKNAME" | translate}}
      .info_detail
        input.dl_input.dl_form-Control.editToggle(type="text" name ="nickname" ng-model="user.nickname" ng-disabled="baseUnEdit")
    .dl_row.clearfix(ng-if="user.realname || ! baseUnEdit")
      .info_side
        span.info_label {{"REALNAME" | translate}}
      .info_detail
        input.dl_input.dl_form-Control.editToggle(type="text" name="realname" ng-model="user.realname" ng-disabled="baseUnEdit")
    .dl_row.clearfix
      .info_side  
        span.info_label {{"COMPANY" | translate}}
      .info_side
        span.info_label {{user.cname}}
    .dl_row.clearfix(ng-if="user.position || ! baseUnEdit")
      .info_side
        span.info_label {{"POSITION" | translate}}
      .info_detail
        input.dl_input.dl_form-Control.editToggle(type="text" name="position" ng-model="user.position" ng-disabled="baseUnEdit")
    .dl_row.clearfix(ng-if="user.sex || ! baseUnEdit")
      .info_side
        span.info_label {{"GENDER" | translate}}
      .info_detail_2(ng-if="baseUnEdit")
        span.info_label {{user.sex}}
      if (Global.role!=='PARTNER')
        .info_detail(ng-if="!baseUnEdit")
          span.radio.info_radio.info_label
            input(type="radio" name="sex" value="男" ng-model="user.sex" ng-disabled="baseUnEdit")
            | {{"MALE" | translate}}
          span.radio.info_radio.info_label
            input(type="radio" name="sex" value="女" ng-model="user.sex" ng-disabled="baseUnEdit")
            | {{"FEMALE" | translate}}
    .dl_row.clearfix(ng-show="user.birthday || ! baseUnEdit")
      .info_side
        span.info_label {{"BIRTHDAY" | translate}}
      .info_detail.birthday_detail(ng-show="!baseUnEdit" )
        .input-group.date.form_datetime.dl_modal_input#birthday
          span.input-group-addon.no_radius
            span.glyphicon.glyphicon-th
          input.dl_input.editToggle.dl_form-Control(type="text" ng-model="user.birthday" name="date" placeholder="生日"  readonly required)
      .info_side(ng-if="baseUnEdit")  
        span.info_label {{user.birthday |date:'yyyy-MM-dd'}}
    .dl_row.clearfix(ng-if="user.bloodType || ! baseUnEdit")
      .info_side
        span.info_label {{"BLOODTYPE" | translate}}
      .info_detail_2(ng-if="baseUnEdit")
        span.info_label {{user.bloodType}}
      if (Global.role!=='PARTNER')
        .info_detail(ng-if="!baseUnEdit")
          select.dl_input.dl_form-Control.editToggle(type="text" name="bloodType" ng-model ="user.bloodType" style="height:34px")
            option(ng-select="user.bloodType === 'A'") A
            option(ng-select="user.bloodType === 'B'") B
            option(ng-select="user.bloodType === 'O'") O
            option(ng-select="user.bloodType === 'AB'") AB
    .dl_row.clearfix(ng-if="user.introduce || ! baseUnEdit")
      .info_side
        span.info_label {{"BRIEF" | translate}}
      .info_detail
        input.dl_input.dl_form-Control.editToggle(type="text" name="introduce" ng-model="user.introduce" ng-disabled="baseUnEdit")
    .dl_row.clearfix
      .info_side
        span.info_label {{"REGISTER_DATE" | translate}}
      .info_side
        span.info_label {{user.register_date | date:'yyyy-MM-dd HH:mm:ss'}}
  form.form-horizontal(name="linkForm")
    .dl_row
      h5.pull-left {{"CONTACT" | translate}}
      if (Global.role!=='PARTNER')
        button.dl_btn.dl_btn_small.pull-right(ng-click="linkEditToggle()" ng-bind="linkButtonStatus")
    hr.margin_top_6
    .dl_row.clearfix(ng-if="user.phone || ! linkUnEdit")
      .info_side
        span.info_label {{"PHONE" | translate}}
      .info_detail
        input.dl_input.dl_form-Control.editToggle(type="text" name="phone" ng-model="user.phone" ng-disabled="linkUnEdit")
    .dl_row.clearfix(ng-if="user.email || ! linkUnEdit")
      .info_side
        span.info_label {{"EMAIL" | translate}}
      .info_detail
        input.dl_input.dl_form-Control.editToggle(type="email" name="email" ng-model="user.email" ng-disabled="linkUnEdit")
    .dl_row.clearfix(ng-if="user.qq || ! linkUnEdit")
      .info_side
        span.info_label {{"QQ" | translate}}
      .info_detail
        input.dl_input.dl_form-Control.editToggle(type="text" name="qq" ng-model="user.qq" ng-disabled="linkUnEdit")
  if (Global.role!=='PARTNER')
    script.
      $(function() {
        $('#birthday').datetimepicker({
          autoclose: true,
          endDate: new Date(),
          minView: 2,
          format: 'yyyy-mm-dd'
        });
      });