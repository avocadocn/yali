extends ../layouts/manager

block baseInfo
  .row
    .col-md-2
      //用户头像
      img.img-responsive.img-thumbnail.size_210.img_contain(src="#{photo ? photo :'/img/icons/default_user_photo.png'}" width="128px")
    .col-md-10
      //人名
      .row
        h1= realname
    .col-md-10
      //公司名
      .row
        label= cname
    .col-md-10
      //个性签名
      .row.margin_top_15
        h5= sign
  //a.btn.btn-primary(href="/users/editPhoto") 修改头像

block panel
  div(ng-app="tabViewUser")
    ul.nav.nav-tabs
      li(ng-class="{'active':nowTab=='group_message'}")
        a(href="#/group_message" ng-click="addactive('group_message')") 我的小组动态
      li(ng-class="{'active':nowTab=='schedule'}")
        a(href="#/schedule" ng-click="addactive('schedule')") 日程列表
      li(ng-class="{'active':nowTab=='personal'}")
        a(href="#/personal" ng-click="addactive('personal')") 个人资料
    .tab-content
      .tab-pane.active
        div(ng-view)

block aside
  include ../partials/group_thumbnail

  +group_thumbnail(groups,'active','我的兴趣小组')
  +group_thumbnail(ugids,'inactive','未添加兴趣小组')


append footExt
  script(src="/lib/angular-route/angular-route.min.js")
  script(src="/js/controllers/tabviewUser.js")

