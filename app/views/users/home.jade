extends ../layouts/manager

block baseInfo
  .dl_container.clearfix
    .aside
      //用户头像
      img.size_140.img_contain(src="#{photo ? photo :'/img/icons/default_user_photo.png'}")
    .main
      //人名
      .dl_row
        label.head= realname
      //公司名
      .dl_row
        a.subtitle(href='/company/home') #{cname}
      //个性签名
      .dl_row
        p.subtitle= sign 

block panel
  ul.nav.nav-tabs
    if(role==='OWNER')
      li.tab_style(ng-class="{'active':nowTab=='group_message'}")
        a.subtitle(href="#/group_message" ng-click="addactive('group_message')") {{"LATEST_MESSAGE"|translate}}
    li.tab_style(ng-class="{'active':nowTab=='campaign'}")
      a.subtitle(href="#/campaign" ng-click="addactive('campaign')") {{"CAMPAIGN"|translate}}{{"LIST"|translate}}
    li.tab_style(ng-class="{'active':nowTab=='schedule'}")
      a.subtitle(href="#/schedule" ng-click="addactive('schedule')") {{"MY"|translate}}{{"SCHEDULE"|translate}}
    li.tab_style(ng-class="{'active':nowTab=='timeLine'}")
      a.subtitle(href="#/timeLine" ng-click="addactive('timeLine')") {{"TIME_LINE"|translate}}
  .tab-content.margin_top_20
    .tab-pane.active
      div(ng-view)

block aside
  if role !== 'HR'
    include ../partials/group_thumbnail
    +group_thumbnail(selected_teams,'active',"{{'MY'|translate}}{{'TEAM'|translate}}")
    +group_thumbnail(unselected_teams,'inactive',"{{'UNSELECTED_TEAM'|translate}}")

append footExt
  script(src="/js/controllers/tabviewUser.js")
