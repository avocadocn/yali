extends ../layouts/manager

block baseInfo
  .row
    .col-md-3
      //用户头像
      img.size_210(src="#{photo ? photo :'/img/icons/default_user_photo.png'}")
    .col-md-9
      //人名
      .row
        h3= realname
      //公司名
      .row
        h5= cname
      //个性签名
      .row.margin_top_15
        h5= sign

block panel
  div(ng-app="tabViewUser")
    ul.nav.nav-tabs
      if(role==='OWNER')
        li(ng-class="{'active':nowTab=='group_message'}")
          a.h5(href="#/group_message" ng-click="addactive('group_message')") 我的动态
      li(ng-class="{'active':nowTab=='schedule'}")
        a.h5(href="#/schedule" ng-click="addactive('schedule')") 日程列表
      li(ng-class="{'active':nowTab=='personal'}")
        a.h5(href="#/personal" ng-click="addactive('personal')") 个人资料
      li(ng-class="{'active':nowTab=='timeLine'}")
        a.h5(href="#/timeLine" ng-click="addactive('timeLine')") timeLine
    .tab-content
      .tab-pane.active
        div(ng-view)

block aside
  if role !== 'HR'
    include ../partials/group_thumbnail
    +group_thumbnail(selected_teams,'active','我的小队')
    +group_thumbnail(unselected_teams,'inactive','我未添加的小队')

append footExt
  script(src="/lib/angular-route/angular-route.min.js")
  script(src="/js/controllers/tabviewUser.js")
